@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        let modifiedSettings = new Set();
        let originalValues = {};
        let currentLayoutType = '';

        $(document).ready(function() {
            initializeInputs();
            loadTrashCount();
            initializeSearch();
            initializeApplyMethodToggle();
        });

        // ============================================
        // 📝 LAYOUT EDITOR - ĐÃ SỬA
        // ============================================
        function loadLayout(type) {
            fetch(`/Settings/GetLayoutContent?layoutType=${type}`)
                .then(r => r.json())
                .then(data => {
                    if (data.success) {
                        $('#layoutEditor').val(data.content);
                        currentLayoutType = type;

                        $('#currentLayoutName').html(`
                            <i class="fas fa-file-code text-success"></i>
                            ${data.fileName}
                        `);

                        $('#layoutInfo').html(`
                            <i class="fas fa-info-circle"></i>
                            <strong>File:</strong> <span id="fileName">${data.fileName}</span> |
                            <strong>Sửa lần cuối:</strong> <span id="lastModified">${data.lastModified}</span>
                        `).show();

                        Swal.fire({
                            icon: 'success',
                            title: 'Đã load!',
                            text: data.fileName,
                            timer: 1500,
                            showConfirmButton: false
                        });
                    } else {
                        Swal.fire('Lỗi', data.message, 'error');
                    }
                })
                .catch(err => {
                    Swal.fire('Lỗi', 'Không thể load layout: ' + err.message, 'error');
                });
        }

        function saveLayout() {
            if (!currentLayoutType) {
                Swal.fire('Lỗi', 'Vui lòng load layout trước!', 'error');
                return;
            }

            const content = $('#layoutEditor').val();

            Swal.fire({
                title: 'Xác nhận lưu?',
                html: `Lưu <strong>${currentLayoutType === 'admin' ? '_Layout.cshtml' : '_LayoutStaff.cshtml'}</strong>?<br><small class="text-warning">⚠️ Backup sẽ được tạo tự động</small>`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: '<i class="fas fa-save"></i> Lưu',
                cancelButtonText: 'Hủy',
                confirmButtonColor: 'var(--success)'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Đang lưu...',
                        allowOutsideClick: false,
                        didOpen: () => Swal.showLoading()
                    });

                    fetch('/Settings/SaveLayoutFile', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            LayoutType: currentLayoutType,
                            Content: content
                        })
                    })
                    .then(r => r.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Đã lưu!',
                                text: data.message,
                                timer: 2000
                            });
                            loadBackupFiles(); // Refresh backup list
                        } else {
                            Swal.fire('Lỗi', data.message, 'error');
                        }
                    })
                    .catch(err => Swal.fire('Lỗi', 'Không thể lưu layout!', 'error'));
                }
            });
        }

        function openBackupModal() {
            loadBackupFiles();
            $('#backupModal').modal('show');
        }

        function loadBackupFiles() {
            fetch('/Settings/GetBackupFiles')
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    const tbody = $('#backupTableBody');
                    tbody.empty();

                    if (!data.backups || data.backups.length === 0) {
                        tbody.append(`
                            <tr>
                                <td colspan="4" class="text-center py-5">
                                    <div class="empty-state">
                                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                        <p class="text-muted">Chưa có backup nào</p>
                                    </div>
                                </td>
                            </tr>
                        `);
                    } else {
                        data.backups.forEach(item => {
                            tbody.append(`
                                <tr>
                                    <td><code>${item.fileName}</code></td>
                                    <td>${formatFileSize(item.size)}</td>
                                    <td>${item.created}</td>
                                    <td>
                                        <button class="btn btn-sm btn-custom btn-edit"
                                                onclick="restoreBackup('${item.fileName}')"
                                                style="padding: 6px 12px;">
                                            <i class="fas fa-undo"></i> Restore
                                        </button>
                                        <button class="btn btn-sm btn-custom btn-delete"
                                                onclick="deleteBackup('${item.fileName}')"
                                                style="padding: 6px 12px;">
                                            <i class="fas fa-trash"></i> Xóa
                                        </button>
                                    </td>
                                </tr>
                            `);
                        });
                    }
                }
            })
            .catch(err => console.error('Lỗi load backup:', err));
        }

        function formatFileSize(bytes) {
            if (!bytes || bytes === 0) return '0 KB';
            return (bytes / 1024).toFixed(2) + ' KB';
        }

        function restoreBackup(fileName) {
            Swal.fire({
                title: 'Khôi phục backup?',
                html: `File: <code>${fileName}</code>`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'Khôi phục',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (!result.isConfirmed) return;

                Swal.fire({
                    title: 'Đang khôi phục...',
                    allowOutsideClick: false,
                    didOpen: () => Swal.showLoading()
                });

                fetch('/Settings/RestoreFromBackup', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ BackupFileName: fileName })
                })
                .then(r => r.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Đã khôi phục!',
                            timer: 1500
                        }).then(() => {
                            if (currentLayoutType) {
                                loadLayout(currentLayoutType);
                            }
                            loadBackupFiles();
                        });
                    } else {
                        Swal.fire('Lỗi', data.message, 'error');
                    }
                })
                .catch(err => Swal.fire('Lỗi', 'Không thể khôi phục!', 'error'));
            });
        }

        function deleteBackup(fileName) {
            Swal.fire({
                title: 'Xóa backup?',
                html: `File: <code>${fileName}</code>`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Xóa',
                cancelButtonText: 'Hủy',
                confirmButtonColor: '#dc3545'
            }).then((result) => {
                if (!result.isConfirmed) return;

                fetch('/Settings/DeleteBackup', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ BackupFileName: fileName })
                })
                .then(r => r.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Đã xóa!',
                            timer: 1500
                        }).then(() => loadBackupFiles());
                    } else {
                        Swal.fire('Lỗi', data.message, 'error');
                    }
                })
                .catch(err => Swal.fire('Lỗi', 'Không thể xóa!', 'error'));
            });
        }

        // ============================================
        // CÁC FUNCTION CŨ CỦA BẠN (GIỮ NGUYÊN)
        // ============================================
        function initializeInputs() {
            $('[data-key]').each(function() {
                const key = $(this).data('key');
                originalValues[key] = $(this).val();
            });

            $('[data-key]').on('change input', function() {
                const key = $(this).data('key');
                const newValue = $(this).val();

                if (newValue !== originalValues[key]) {
                    modifiedSettings.add(key);
                    $(this).addClass('modified');
                    $(this).closest('.setting-card').addClass('modified');
                } else {
                    modifiedSettings.delete(key);
                    $(this).removeClass('modified');
                    if (modifiedSettings.size === 0) {
                        $(this).closest('.setting-card').removeClass('modified');
                    }
                }
                updateModifiedCount();
            });
        }

        function initializeSearch() {
            $('#searchSalary').on('input', function() {
                const query = $(this).val().toLowerCase();
                filterSettings('#salarySettingsList', query);
            });

            $('#searchAttendance').on('input', function() {
                const query = $(this).val().toLowerCase();
                filterSettings('#attendanceSettingsList', query);
            });
        }

        function filterSettings(container, query) {
            $(container + ' .setting-card').each(function() {
                const key = $(this).data('key').toLowerCase();
                const text = $(this).text().toLowerCase();

                if (key.includes(query) || text.includes(query)) {
                    $(this).fadeIn();
                } else {
                    $(this).fadeOut();
                }
            });
        }

        function initializeApplyMethodToggle() {
            $('input[name="applyMethod"]').on('change', function() {
                $('.method-option').removeClass('selected');
                $(this).closest('.method-option').addClass('selected');

                if ($(this).val() === 'CONDITIONAL') {
                    $('#conditionalDescGroup').slideDown();
                } else {
                    $('#conditionalDescGroup').slideUp();
                }
            });

            $('#createCategory').on('change', function() {
                if ($(this).val() === 'Salary') {
                    $('#applyMethodGroup').slideDown();
                } else {
                    $('#applyMethodGroup').slideUp();
                    $('input[name="applyMethod"]').prop('checked', false);
                    $('.method-option').removeClass('selected');
                }
            });
        }

        function updateModifiedCount() {
            const count = modifiedSettings.size;
            $('#modifiedCount').text(count);

            if (count > 0) {
                $('#saveIndicator').fadeIn();
                $('#btnSaveAll').removeClass('btn-save-all').addClass('btn-custom').css({
                    'background': 'var(--warning)',
                    'animation': 'pulse 2s infinite'
                });
            } else {
                $('#saveIndicator').fadeOut();
                $('#btnSaveAll').removeClass('btn-custom').addClass('btn-save-all').css({
                    'background': 'var(--success)',
                    'animation': 'none'
                });
            }
        }

        $('#btnSaveAll').click(function() {
            if (modifiedSettings.size === 0) {
                Swal.fire({
                    icon: 'info',
                    title: 'Không có thay đổi',
                    text: 'Bạn chưa thay đổi cấu hình nào!',
                    timer: 1500
                });
                return;
            }

            const settings = [];
            modifiedSettings.forEach(key => {
                const element = $(`[data-key="${key}"]`);
                settings.push({
                    SettingKey: key,
                    SettingValue: element.val()
                });
            });

            Swal.fire({
                title: 'Xác nhận lưu',
                html: `Lưu <strong>${settings.length}</strong> cấu hình đã thay đổi?`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: '<i class="fas fa-save"></i> Lưu',
                cancelButtonText: 'Hủy',
                confirmButtonColor: 'var(--success)'
            }).then((result) => {
                if (result.isConfirmed) {
                    saveSettings(settings);
                }
            });
        });

        function saveSettings(settings) {
            Swal.fire({
                title: 'Đang lưu...',
                html: 'Vui lòng đợi trong giây lát',
                allowOutsideClick: false,
                didOpen: () => Swal.showLoading()
            });

            fetch('/Settings/BatchUpdateSettings', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(settings)
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Thành công!',
                        text: data.message,
                        timer: 1500
                    }).then(() => location.reload());
                } else {
                    Swal.fire('Lỗi', data.message, 'error');
                }
            })
            .catch(() => Swal.fire('Lỗi', 'Không thể kết nối server!', 'error'));
        }

        function autoGenerateKey() {
            const description = $('#createDescription').val();
            if (!description) {
                $('#keyStatus').html('');
                return;
            }

            const category = $('#createCategory').val();
            const applyMethod = $('input[name="applyMethod"]:checked').val();

            fetch('/Settings/GenerateKey', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    description: description,
                    applyMethod: applyMethod
                })
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    $('#createKey').val(data.key);
                    if (data.exists) {
                        $('#keyStatus').html('<i class="fas fa-exclamation-triangle text-warning"></i> Key này đã tồn tại!');
                    } else {
                        $('#keyStatus').html('<i class="fas fa-check-circle text-success"></i> Key sẵn sàng');
                    }
                }
            });
        }

        function openCreateModal(category = 'Salary') {
            $('#createForm')[0].reset();
            $('#createCategoryHidden').val(category);
            $('#createCategory').val(category);
            $('#keyStatus').html('');
            $('.method-option').removeClass('selected');
            $('input[name="applyMethod"]').prop('checked', false);
            $('#conditionalDescGroup').hide();

            if (category === 'Salary') {
                $('#applyMethodGroup').show();
            } else {
                $('#applyMethodGroup').hide();
            }

            $('#createModal').modal('show');
        }

        function createSetting() {
            const key = $('#createKey').val();
            const value = $('#createValue').val();
            const description = $('#createDescription').val();
            const dataType = $('#createDataType').val();
            const category = $('#createCategory').val();
            const applyMethod = $('input[name="applyMethod"]:checked').val() || null;

            if (!key || !value || !description) {
                Swal.fire('Lỗi', 'Vui lòng điền đầy đủ thông tin!', 'error');
                return;
            }

            Swal.fire({
                title: 'Xác nhận tạo?',
                html: `<strong>${description}</strong><br><code>${key}</code>`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'Tạo',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Đang tạo...',
                        allowOutsideClick: false,
                        didOpen: () => Swal.showLoading()
                    });

                    fetch('/Settings/CreateSetting', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            SettingKey: key,
                            SettingValue: value,
                            Description: description,
                            DataType: dataType,
                            Category: category,
                            ApplyMethod: applyMethod
                        })
                    })
                    .then(r => r.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Thành công!',
                                timer: 1500
                            }).then(() => location.reload());
                        } else {
                            Swal.fire('Lỗi', data.message, 'error');
                        }
                    });
                }
            });
        }

        function toggleSettingStatus(settingId, settingKey) {
            Swal.fire({
                title: 'Thay đổi trạng thái?',
                text: `Thiết lập: ${settingKey}`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'Thay đổi',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Đang cập nhật...',
                        allowOutsideClick: false,
                        didOpen: () => Swal.showLoading()
                    });

                    fetch('/Settings/ToggleSettingStatus', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ SettingId: settingId })
                    })
                    .then(r => r.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                icon: 'success',
                                title: data.message,
                                timer: 1500
                            }).then(() => location.reload());
                        } else {
                            Swal.fire('Lỗi', data.message, 'error');
                        }
                    });
                }
            });
        }

        function openEditModal(id, key, value, desc, dataType, category, applyMethod) {
            $('#editId').val(id);
            $('#editKey').val(key);
            $('#editValue').val(value);
            $('#editDescription').val(desc);
            $('#editDataType').val(dataType);
            $('#editCategory').val(category);
            $('#editApplyMethod').val(applyMethod || '');
            $('#editModal').modal('show');
        }

        function editSetting() {
            const data = {
                SettingId: parseInt($('#editId').val()),
                SettingKey: $('#editKey').val(),
                SettingValue: $('#editValue').val(),
                Description: $('#editDescription').val(),
                DataType: $('#editDataType').val(),
                Category: $('#editCategory').val(),
                ApplyMethod: $('#editApplyMethod').val()
            };

            Swal.fire({
                title: 'Đang cập nhật...',
                allowOutsideClick: false,
                didOpen: () => Swal.showLoading()
            });

            fetch('/Settings/EditSetting', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Đã cập nhật!',
                        timer: 1500
                    }).then(() => location.reload());
                } else {
                    Swal.fire('Lỗi', data.message, 'error');
                }
            });
        }

        function moveToTrash(id) {
            Swal.fire({
                title: 'Chuyển vào thùng rác?',
                text: 'Bạn có thể khôi phục sau!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Xóa',
                cancelButtonText: 'Hủy',
                confirmButtonColor: 'var(--danger)'
            }).then((result) => {
                if (!result.isConfirmed) return;

                fetch('/Settings/MoveToTrash', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `id=${id}`
                })
                .then(r => r.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Đã xóa!',
                            timer: 1500
                        }).then(() => location.reload());
                    } else {
                        Swal.fire('Lỗi', data.message, 'error');
                    }
                });
            });
        }

        function openTrashModal() {
            fetch('/Settings/GetTrashList')
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    const tbody = $('#trashTableBody');
                    tbody.empty();

                    if (!data.data || data.data.length === 0) {
                        tbody.append(`
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <div class="empty-state">
                                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                        <p class="text-muted">Thùng rác trống</p>
                                    </div>
                                </td>
                            </tr>
                        `);
                    } else {
                        data.data.forEach(item => {
                            tbody.append(`
                                <tr>
                                    <td><code>${item.settingKey}</code></td>
                                    <td>${item.description || '-'}</td>
                                    <td>${item.settingValue || '-'}</td>
                                    <td><span class="badge bg-secondary">${item.category}</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-custom btn-edit" onclick="restoreSetting(${item.settingId})" style="padding: 6px 12px;">
                                            <i class="fas fa-undo"></i> Khôi phục
                                        </button>
                                        <button class="btn btn-sm btn-custom btn-delete" onclick="permanentDelete(${item.settingId})" style="padding: 6px 12px;">
                                            <i class="fas fa-times"></i> Xóa vĩnh viễn
                                        </button>
                                    </td>
                                </tr>
                            `);
                        });
                    }
                    $('#trashModal').modal('show');
                }
            });
        }

        function restoreSetting(id) {
            Swal.fire({
                title: 'Khôi phục?',
                text: 'Cấu hình sẽ được khôi phục!',
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'Khôi phục',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (!result.isConfirmed) return;

                fetch('/Settings/RestoreSetting', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `id=${id}`
                })
                .then(r => r.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Đã khôi phục!',
                            timer: 1500
                        }).then(() => location.reload());
                    } else {
                        Swal.fire('Lỗi', data.message, 'error');
                    }
                });
            });
        }

        function permanentDelete(id) {
            Swal.fire({
                title: 'XÓA VĨNH VIỄN?',
                html: '<strong>CẢNH BÁO:</strong> Không thể khôi phục sau khi xóa!',
                icon: 'error',
                showCancelButton: true,
                confirmButtonText: '<i class="fas fa-trash"></i> Xóa vĩnh viễn',
                cancelButtonText: 'Hủy',
                confirmButtonColor: '#dc3545'
            }).then((result) => {
                if (!result.isConfirmed) return;

                fetch('/Settings/PermanentDelete', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `id=${id}`
                })
                .then(r => r.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Đã xóa vĩnh viễn!',
                            timer: 1500
                        }).then(() => location.reload());
                    } else {
                        Swal.fire('Lỗi', data.message, 'error');
                    }
                });
            });
        }

        function loadTrashCount() {
            fetch('/Settings/GetTrashList')
            .then(r => r.json())
            .then(data => {
                if (data.success && data.data) {
                    const count = data.data.length;
                    $('#trashCount').text(count);
                }
            })
            .catch(() => console.log('Error loading trash count'));
        }
    </script>
}