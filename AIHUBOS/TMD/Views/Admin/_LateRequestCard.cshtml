@model AIHUBOS.Models.LateRequest
<link href="~/css/requestcard.css" rel="stylesheet" />

<div class="rq-card rq-card-late">
    <div class="rq-card-header">
        <div class="rq-card-type">
            <i class="fas fa-user-clock"></i>
            <span>Đi trễ</span>
        </div>
        <span class="rq-status-badge rq-status-@(Model.Status?.ToLower() ?? "unknown")">
            @if (Model.Status == "Pending")
            {
                <i class="fas fa-clock"></i>
                <span>Chờ duyệt</span>
            }
            else if (Model.Status == "Approved")
            {
                <i class="fas fa-check"></i>
                <span>Đã duyệt</span>
            }
            else if (Model.Status == "Rejected")
            {
                <i class="fas fa-times"></i>
                <span>Từ chối</span>
            }
            else
            {
                <span>@Model.Status</span>
            }
        </span>
    </div>

    <div class="rq-user-section">
        <img src="@(Model?.User?.Avatar ?? "/images/default-avatar.png")"
             alt="Avatar"
             class="rq-user-avatar" />
        <div class="rq-user-info">
            <strong>@Model?.User?.FullName</strong>
            <small>@Model?.User?.Email</small>
        </div>
    </div>

    <div class="rq-card-body">
        <div class="rq-info-row">
            <div class="rq-info-item">
                <i class="fas fa-calendar"></i>
                <div>
                    <small>Ngày</small>
                    <strong>@Model.RequestDate.ToString("dd/MM/yyyy")</strong>
                </div>
            </div>
            <div class="rq-info-item">
                <i class="fas fa-clock"></i>
                <div>
                    <small>Dự kiến đến</small>
                    <strong>@Model.ExpectedArrivalTime.ToString("HH:mm")</strong>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Reason))
        {
            <div class="rq-reason">
                <i class="fas fa-comment-dots"></i>
                <p>@Model.Reason</p>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.ProofDocument))
        {
            <div class="rq-document">
                <i class="fas fa-file-alt"></i>
                <a href="@Model.ProofDocument" target="_blank">Xem tài liệu đính kèm</a>
            </div>
        }

        <div class="rq-meta">
            <i class="far fa-clock"></i>
            <small>
                Tạo: @(Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")
            </small>
        </div>
    </div>

    <div class="rq-actions">
        @if (Model.Status == "Pending")
        {
            <button type="button" class="rq-btn rq-btn-approve"
                    onclick="openReviewModal(@Model.LateRequestId, 'Late', '@Model.User?.FullName', 'Đi trễ', '@Model.RequestDate.ToString("dd/MM/yyyy")', '@Model.ExpectedArrivalTime.ToString("HH:mm")', '', '@(Model.Reason?.Replace("'", "\\'").Replace("\n", " ") ?? "")')">
                <i class="fas fa-check"></i>
                <span>Duyệt</span>
            </button>
            <button type="button" class="rq-btn rq-btn-reject"
                    onclick="openRejectModal(@Model.LateRequestId, 'Late')">
                <i class="fas fa-times"></i>
                <span>Từ chối</span>
            </button>
        }
        else
        {
            <button type="button" class="rq-btn rq-btn-view"
                    onclick="viewRequestDetail(@Model.LateRequestId, 'Late')">
                <i class="fas fa-eye"></i>
                <span>Chi tiết</span>
            </button>
        }
    </div>

    @if (Model.Status != "Pending" && Model.ReviewedAt.HasValue)
    {
        <div class="rq-review-info">
            <i class="fas fa-user-check"></i>
            <small>
                @if (Model.ReviewedByNavigation != null)
                {
                    <text>Duyệt bởi: <strong>@Model.ReviewedByNavigation.FullName</strong></text>
                }
                else if (Model.ReviewedBy.HasValue)
                {
                    <text>Duyệt bởi Admin (ID: @Model.ReviewedBy.Value)</text>
                }
                else
                {
                    <text>Đã duyệt</text>
                }
                <text> lúc @Model.ReviewedAt.Value.ToString("dd/MM/yyyy HH:mm")</text>
            </small>
            @if (!string.IsNullOrWhiteSpace(Model.ReviewNote))
            {
                <div class="rq-review-note">
                    <i class="fas fa-sticky-note"></i>
                    <span>@Model.ReviewNote</span>
                </div>
            }
        </div>
    }
</div>

<script src="~/js/admin-request.js"></script>