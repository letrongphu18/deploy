@{
    ViewData["Title"] = "Đặt Lại Mật Khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AIHUBOS System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="~/css/auth-page.css" rel="stylesheet" />
</head>
<body>
    <div class="rp-wrapper">
        <div class="rp-container">
            <div class="rp-card">
                <div class="rp-header">
                    <div class="rp-icon-wrapper">
                        <i class="fas fa-lock"></i>
                    </div>
                    <h3>Đặt Lại Mật Khẩu</h3>
                    <p>Tạo mật khẩu mới cho tài khoản của bạn</p>
                </div>

                <div class="rp-body">
                    <div class="rp-email-info">
                        <i class="fas fa-user-circle"></i>
                        <p><strong>@ViewBag.Email</strong></p>
                    </div>

                    <form id="resetPasswordForm">
                        <input type="hidden" id="email" value="@ViewBag.Email">
                        <input type="hidden" id="otpCode" value="@ViewBag.OtpCode">

                        <div class="rp-form-group">
                            <label for="newPassword" class="rp-label">
                                <i class="fas fa-key"></i> Mật khẩu mới <span class="rp-required">*</span>
                            </label>
                            <div class="rp-input-wrapper">
                                <input type="password"
                                       class="rp-input"
                                       id="newPassword"
                                       placeholder="Nhập mật khẩu mới"
                                       required
                                       minlength="6"
                                       autocomplete="new-password">
                                <span class="rp-toggle-password" data-target="newPassword">
                                    <i class="fas fa-eye"></i>
                                </span>
                            </div>
                            <div class="rp-strength-meter">
                                <div class="rp-strength-bar">
                                    <div class="rp-strength-fill" id="strengthBar"></div>
                                </div>
                                <div class="rp-strength-text" id="strengthText"></div>
                            </div>
                        </div>

                        <div class="rp-form-group">
                            <label for="confirmPassword" class="rp-label">
                                <i class="fas fa-check-double"></i> Xác nhận mật khẩu <span class="rp-required">*</span>
                            </label>
                            <div class="rp-input-wrapper">
                                <input type="password"
                                       class="rp-input"
                                       id="confirmPassword"
                                       placeholder="Nhập lại mật khẩu mới"
                                       required
                                       autocomplete="new-password">
                                <span class="rp-toggle-password" data-target="confirmPassword">
                                    <i class="fas fa-eye"></i>
                                </span>
                            </div>
                        </div>

                        <div class="rp-requirements">
                            <strong><i class="fas fa-shield-alt"></i> Yêu cầu mật khẩu:</strong>
                            <div class="rp-requirement" id="req-length">
                                <i class="fas fa-circle"></i>
                                <span>Ít nhất 6 ký tự</span>
                            </div>
                            <div class="rp-requirement" id="req-number">
                                <i class="fas fa-circle"></i>
                                <span>Ít nhất 1 chữ số</span>
                            </div>
                            <div class="rp-requirement" id="req-letter">
                                <i class="fas fa-circle"></i>
                                <span>Ít nhất 1 chữ cái</span>
                            </div>
                        </div>

                        <button type="submit" class="rp-btn rp-btn-primary" id="btnReset">
                            <i class="fas fa-check"></i>
                            <span>Đặt Lại Mật Khẩu</span>
                        </button>

                        <div class="rp-back-link">
                            <a href="/Account/Login">
                                <i class="fas fa-arrow-left"></i>
                                Quay lại đăng nhập
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/resetpass.js"></script>
</body>
</html>