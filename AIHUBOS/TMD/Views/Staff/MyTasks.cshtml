@model List<AIHUBOS.Models.UserTask>
@{
    ViewData["Title"] = "Công việc của tôi";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}

<style>
    :root {
        --primary: #1a1f4a;
        --secondary: #6366f1;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        --info: #3b82f6;
        --light: #f8fafc;
        --dark: #0f172a;
        --border: #e2e8f0;
        --shadow: rgba(15, 23, 42, 0.08);
        --text: #334155;
        --text-muted: #64748b;
    }

    body.staff-dark-mode {
        --light: #1e293b;
        --dark: #0f172a;
        --border: #334155;
        --shadow: rgba(0, 0, 0, 0.3);
        --text: #e2e8f0;
        --text-muted: #94a3b8;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .task-page {
        padding: 2rem;
        background: var(--light);
        min-height: calc(100vh - 70px);
    }

    /* ========== HEADER ========== */
    .task-header {
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        border-radius: 1.5rem;
        padding: 2.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 8px 24px var(--shadow);
        position: relative;
        overflow: hidden;
    }

    .task-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, rgba(99, 102, 241, 0.3) 0%, transparent 70%);
        animation: float 6s ease-in-out infinite;
    }

    keyframes float {
        0%, 100% {
            transform: translateY(0) rotate(0deg);
        }
        50% {
            transform: translateY(-20px) rotate(5deg);
        }
    }

    .task-header-content {
        position: relative;
        z-index: 1;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1.5rem;
    }

    .task-header-left h1 {
        color: white;
        font-size: 2rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .task-header-left p {
        color: rgba(255, 255, 255, 0.8);
        font-size: 1rem;
    }

    .task-stats {
        display: flex;
        gap: 1.5rem;
    }

    .task-stat-item {
        text-align: center;
        padding: 1rem 1.5rem;
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.2);
        min-width: 100px;
    }

    .task-stat-item .number {
        font-size: 2rem;
        font-weight: 800;
        color: white;
        margin-bottom: 0.25rem;
    }

    .task-stat-item .label {
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.7);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 600;
    }

    /* ========== FILTERS ========== */
    .task-filters {
        background: white;
        border-radius: 1rem;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 2px 12px var(--shadow);
    }

    body.staff-dark-mode .task-filters {
        background: var(--light);
    }

    .filter-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }

    .filter-group label {
        display: block;
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--text);
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .filter-group select,
    .filter-group input {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 2px solid var(--border);
        border-radius: 0.75rem;
        font-size: 0.875rem;
        background: white;
        color: var(--text);
        transition: all 0.3s ease;
        font-family: inherit;
    }

    body.staff-dark-mode .filter-group select,
    body.staff-dark-mode .filter-group input {
        background: var(--dark);
        color: var(--text);
    }

    .filter-group select:focus,
    .filter-group input:focus {
        outline: none;
        border-color: var(--secondary);
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
    }

    /* ========== TASK LIST ========== */
    .task-list-container {
        background: white;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 2px 12px var(--shadow);
    }

    body.staff-dark-mode .task-list-container {
        background: var(--light);
    }

    .task-list-item {
        display: flex;
        align-items: center;
        gap: 1.25rem;
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid var(--border);
        transition: all 0.3s ease;
        position: relative;
        cursor: pointer;
    }

    .task-list-item::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        width: 4px;
        height: 100%;
        background: var(--secondary);
        transform: scaleY(0);
        transition: transform 0.3s ease;
    }

    .task-list-item:hover {
        background: rgba(99, 102, 241, 0.05);
    }

    .task-list-item:hover::before {
        transform: scaleY(1);
    }

    .task-list-item:last-child {
        border-bottom: none;
    }

    .task-priority-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 0.75rem;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        white-space: nowrap;
    }

    .priority-high {
        background: rgba(239, 68, 68, 0.1);
        color: var(--danger);
    }

    .priority-medium {
        background: rgba(245, 158, 11, 0.1);
        color: var(--warning);
    }

    .priority-low {
        background: rgba(16, 185, 129, 0.1);
        color: var(--success);
    }

    .task-list-content {
        flex: 1;
        min-width: 0;
    }

    .task-list-title {
        font-size: 1rem;
        font-weight: 700;
        color: var(--text);
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .overdue-badge {
        background: var(--danger);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 0.5rem;
        font-size: 0.625rem;
        font-weight: 700;
        animation: pulse 2s ease-in-out infinite;
        white-space: nowrap;
    }

    keyframes pulse {
        0%, 100% {
            opacity: 1;
        }
        50% {
            opacity: 0.7;
        }
    }

    .task-list-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
        font-size: 0.875rem;
        color: var(--text-muted);
    }

    .task-list-meta span {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .task-status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.625rem 1rem;
        border-radius: 0.75rem;
        font-size: 0.875rem;
        font-weight: 600;
        white-space: nowrap;
    }

    .status-todo {
        background: rgba(107, 114, 128, 0.1);
        color: #6b7280;
    }

    .status-inprogress {
        background: rgba(245, 158, 11, 0.1);
        color: var(--warning);
    }

    .status-testing {
        background: rgba(59, 130, 246, 0.1);
        color: var(--info);
    }

    .status-done {
        background: rgba(16, 185, 129, 0.1);
        color: var(--success);
    }

    .status-reopen {
        background: rgba(239, 68, 68, 0.1);
        color: var(--danger);
    }

    /* ========== BUTTONS ========== */
    .task-list-actions {
        display: flex;
        gap: 0.5rem;
    }

    .task-action-btn {
        width: 2.5rem;
        height: 2.5rem;
        border: none;
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 0.875rem;
    }

    .task-action-btn-primary {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
    }

    .task-action-btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
    }

    .task-action-btn-secondary {
        background: var(--light);
        color: var(--text);
        border: 2px solid var(--border);
    }

    .task-action-btn-secondary:hover {
        border-color: var(--secondary);
        background: rgba(99, 102, 241, 0.05);
    }

    /* ========== MODAL ========== */
    .modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 9999;
        align-items: center;
        justify-content: center;
        backdrop-filter: blur(4px);
    }

    .modal-overlay.show {
        display: flex;
    }

    .modal-dialog {
        background: white;
        border-radius: 1.5rem;
        box-shadow: 0 20px 60px var(--shadow);
        width: 90%;
        max-width: 600px;
        max-height: 90vh;
        overflow-y: auto;
    }

    body.staff-dark-mode .modal-dialog {
        background: var(--light);
    }

    .modal-header {
        padding: 1.5rem 2rem;
        border-bottom: 1px solid var(--border);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .modal-header h5 {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text);
        margin: 0;
    }

    .modal-close {
        width: 2.25rem;
        height: 2.25rem;
        border: none;
        background: var(--light);
        border-radius: 0.5rem;
        cursor: pointer;
        color: var(--text-muted);
        font-size: 1.125rem;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .modal-close:hover {
        background: rgba(239, 68, 68, 0.1);
        color: var(--danger);
    }

    .modal-body {
        padding: 2rem;
    }

    .modal-footer {
        padding: 1.25rem 2rem;
        border-top: 1px solid var(--border);
        display: flex;
        gap: 0.75rem;
        justify-content: flex-end;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 0.75rem;
        font-size: 0.875rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        border: none;
        font-family: inherit;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
    }

    .btn-secondary {
        background: var(--light);
        color: var(--text);
    }

    .btn-secondary:hover {
        background: var(--border);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--text);
        margin-bottom: 0.5rem;
    }

    .form-label .required {
        color: var(--danger);
    }

    .form-control {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 2px solid var(--border);
        border-radius: 0.75rem;
        font-size: 0.875rem;
        background: white;
        color: var(--text);
        transition: all 0.3s ease;
        font-family: inherit;
    }

    body.staff-dark-mode .form-control {
        background: var(--dark);
        color: var(--text);
    }

    .form-control:focus {
        outline: none;
        border-color: var(--secondary);
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
    }

    .form-text {
        font-size: 0.75rem;
        color: var(--text-muted);
        margin-top: 0.5rem;
    }

    /* ========== EMPTY STATE ========== */
    .empty-state {
        text-align: center;
        padding: 5rem 2rem;
        background: white;
        border-radius: 1.5rem;
        box-shadow: 0 2px 12px var(--shadow);
    }

    body.staff-dark-mode .empty-state {
        background: var(--light);
    }

    .empty-state i {
        font-size: 5rem;
        color: var(--secondary);
        opacity: 0.5;
        margin-bottom: 1.5rem;
    }

    .empty-state h3 {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text);
        margin-bottom: 0.75rem;
    }

    .empty-state p {
        font-size: 1rem;
        color: var(--text-muted);
    }

    /* ========== RESPONSIVE ========== */
    media (max-width: 768px) {
        .task-page {
            padding: 1rem;
        }

        .task-header {
            padding: 1.5rem;
        }

        .task-header-content {
            flex-direction: column;
            align-items: flex-start;
        }

        .task-stats {
            width: 100%;
            justify-content: space-between;
        }

        .task-stat-item {
            padding: 0.75rem 1rem;
            min-width: auto;
        }

        .task-list-item {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.75rem;
            padding: 1rem;
        }

        .task-list-actions {
            width: 100%;
            justify-content: flex-end;
        }

        .filter-row {
            grid-template-columns: 1fr;
        }
    }
    /* ========== FIX DROPDOWN KHÔNG MỞ ĐƯỢC ========== */
    .modal-overlay {
        z-index: 9998 !important;
    }

    .modal-dialog {
        z-index: 9999 !important;
        position: relative;
    }

    .modal-body {
        z-index: 10000 !important;
        position: relative;
    }

    /* ✅ QUAN TRỌNG: Cho phép select dropdown hoạt động */
    .form-control,
    .form-control select,
    select.form-control {
        position: relative;
        z-index: 10001 !important;
        pointer-events: auto !important;
        cursor: pointer !important;
    }

        /* ✅ Đảm bảo dropdown menu hiển thị đúng */
        select.form-control:focus {
            z-index: 10002 !important;
        }

    /* ✅ Fix cho dark mode nếu có */
    body.staff-dark-mode .form-control select,
    body.staff-dark-mode select.form-control {
        background-color: var(--dark) !important;
        color: var(--text) !important;
    }

    /* ✅ HOẶC: Nếu vẫn không được, thử cách này */
    .modal-dialog * {
        pointer-events: auto !important;
    }

    select option {
        background: white;
        color: black;
        padding: 8px;
    }

    body.staff-dark-mode select option {
        background: #1e293b;
        color: #e2e8f0;
    }
</style>

<div class="task-page">
    <!-- HEADER -->
    <div class="task-header">
        <div class="task-header-content">
            <div class="task-header-left">
                <h1><i class="fas fa-clipboard-list"></i> Công việc của tôi</h1>
                <p>Quản lý và theo dõi tiến độ công việc</p>
            </div>
            <div class="task-stats">
                <div class="task-stat-item">
                    <div class="number" id="totalTasks">@Model.Count</div>
                    <div class="label">Tổng số</div>
                </div>
                <div class="task-stat-item">
                    <div class="number" id="inProgressTasks">@Model.Count(t => t.Status == "InProgress")</div>
                    <div class="label">Đang làm</div>
                </div>
                <div class="task-stat-item">
                    <div class="number" id="completedTasks">@Model.Count(t => t.Status == "Done")</div>
                    <div class="label">Hoàn thành</div>
                </div>
            </div>
        </div>
    </div>

    <!-- FILTERS -->
    <div class="task-filters">
        <div class="filter-row">
            <div class="filter-group">
                <label><i class="fas fa-filter"></i> Trạng thái</label>
                <select id="filterStatus">
                    <option value="">Tất cả</option>
                    <option value="TODO">Chưa bắt đầu</option>
                    <option value="InProgress">Đang làm</option>
                    <option value="Testing">Chờ test</option>
                    <option value="Done">Hoàn thành</option>
                    <option value="Reopen">Cần sửa lại</option>
                </select>
            </div>
            <div class="filter-group">
                <label><i class="fas fa-flag"></i> Độ ưu tiên</label>
                <select id="filterPriority">
                    <option value="">Tất cả</option>
                    <option value="High">Cao</option>
                    <option value="Medium">Trung bình</option>
                    <option value="Low">Thấp</option>
                </select>
            </div>
            <div class="filter-group">
                <label><i class="fas fa-search"></i> Tìm kiếm</label>
                <input type="text" id="searchTask" placeholder="Tìm tên công việc...">
            </div>
        </div>
    </div>

    <!-- TASK LIST -->
    @if (!Model.Any())
    {
        <div class="empty-state">
            <i class="fas fa-inbox"></i>
            <h3>Chưa có công việc nào</h3>
            <p>Bạn chưa được giao công việc nào. Hãy liên hệ quản lý để được phân công.</p>
        </div>
    }
    else
    {
        <div class="task-list-container" id="taskList">
            @foreach (var userTask in Model)
            {
                var task = userTask.Task;
                var priorityClass = (task.Priority ?? "Medium").ToLower();
                var statusClass = (userTask.Status ?? "TODO").ToLower();
                var statusText = userTask.Status switch
                {
                    "TODO" => "Chưa bắt đầu",
                    "InProgress" => "Đang làm",
                    "Testing" => "Chờ test",
                    "Done" => "Hoàn thành",
                    "Reopen" => "Cần sửa lại",
                    _ => "Chưa bắt đầu"
                };
                var statusIcon = userTask.Status switch
                {
                    "TODO" => "inbox",
                    "InProgress" => "spinner fa-spin",
                    "Testing" => "vial",
                    "Done" => "check-circle",
                    "Reopen" => "redo",
                    _ => "inbox"
                };
                var isOverdue = task.Deadline.HasValue && DateTime.Now > task.Deadline.Value && userTask.Status != "Done";

                <div class="task-list-item"
                     data-status="@userTask.Status"
                     data-priority="@task.Priority"
                     data-taskname="@task.TaskName">

                    <div class="task-list-priority">
                        <div class="task-priority-badge priority-@priorityClass">
                            <i class="fas fa-flag"></i>
                            @(task.Priority ?? "Medium")
                        </div>
                    </div>

                    <div class="task-list-content">
                        <div class="task-list-title">
                            <strong>@task.TaskName</strong>
                            @if (isOverdue)
                            {
                                <span class="overdue-badge">
                                    <i class="fas fa-exclamation-triangle"></i> QUÁ HẠN
                                </span>
                            }
                        </div>
                        <div class="task-list-meta">
                            <span>
                                <i class="fas fa-laptop-code"></i>
                                @(task.Platform ?? "N/A")
                            </span>
                            <span>
                                <i class="fas fa-calendar-alt"></i>
                                @(task.Deadline.HasValue ? task.Deadline.Value.ToString("dd/MM/yyyy") : "Không có deadline")
                            </span>
                            @if (!string.IsNullOrEmpty(userTask.ReportLink))
                            {
                                <span>
                                    <i class="fas fa-link"></i>
                                    Có báo cáo
                                </span>
                            }
                        </div>
                    </div>

                    <div class="task-list-status">
                        <div class="task-status-badge status-@statusClass">
                            <i class="fas fa-@statusIcon"></i>
                            <span>@statusText</span>
                        </div>
                    </div>

                    <div class="task-list-actions">
                        <button class="task-action-btn task-action-btn-primary"
                                onclick="viewTaskDetail(@userTask.UserTaskId)"
                                title="Xem chi tiết">
                            <i class="fas fa-eye"></i>
                        </button>
                        @if (userTask.Status != "Done" && userTask.Status != "Testing")
                        {
                            <button class="task-action-btn task-action-btn-secondary"
                                    onclick="updateTaskProgress(@userTask.UserTaskId)"
                                    title="Cập nhật">
                                <i class="fas fa-edit"></i>
                            </button>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Task Detail Modal -->
<div class="modal-overlay" id="taskDetailModal">
    <div class="modal-dialog">
        <div class="modal-header">
            <h5>Chi tiết công việc</h5>
            <button class="modal-close" onclick="closeModal('taskDetailModal')">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-body" id="taskDetailContent">
            <!-- Content loaded via JS -->
        </div>
    </div>
</div>

<!-- Update Progress Modal -->
<div class="modal-overlay" id="updateProgressModal">
    <div class="modal-dialog">
        <div class="modal-header">
            <h5>Cập nhật tiến độ</h5>
            <button class="modal-close" onclick="closeModal('updateProgressModal')">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-body">
            <input type="hidden" id="updateUserTaskId">
            <input type="hidden" id="currentTaskStatus">
            
            <div class="form-group">
                <label class="form-label">Trạng thái <span class="required">*</span></label>
                <select class="form-control" id="updateStatus">
                    <!-- ✅ SẼ ĐƯỢC POPULATE ĐỘNG DỰA VÀO QUYỀN -->
                </select>
            </div>

            <div class="form-group" id="reportLinkGroup" style="display:none;">
                <label class="form-label">Link báo cáo</label>
                <input type="text" class="form-control" id="updateReportLink" placeholder="https://...">
                <small class="form-text">Tùy chọn - Link đến báo cáo hoặc tài liệu liên quan</small>
            </div>

            <div class="form-group" id="testerSelectGroup" style="display:none;">
                <label class="form-label">Chọn Tester <span class="required">*</span></label>
                <select class="form-control" id="selectTester">
                    <option value="">-- Chọn Tester --</option>
                </select>
                <small class="form-text">Bắt buộc khi gửi test</small>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" onclick="closeModal('updateProgressModal')">Đóng</button>
            <button class="btn btn-primary" onclick="submitUpdateProgress()">Cập nhật</button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // ✅ BIẾN TOÀN CỤC
        let userPermissions = null;
        let allTesters = [];

        // ========== LOAD PERMISSIONS AT START ==========
        async function loadUserPermissions() {
            try {
                const response = await fetch('/Staff/GetUserPermissions');
                const data = await response.json();

                if (data.success) {
                    userPermissions = data.permissions;
                    console.log('👤 User Permissions:', userPermissions);

                    // ✅ NẾU LÀ DEV THÌ LOAD TESTERS LUÔN
                    if (userPermissions.canSendToTesting) {
                        await loadTesters();
                    }
                } else {
                    alert('Không thể tải thông tin quyền: ' + data.message);
                }
            } catch (error) {
                console.error('Error loading permissions:', error);
                alert('Lỗi khi tải thông tin quyền');
            }
        }

        // ========== MODAL ==========
        function showModal(id) {
            document.getElementById(id).classList.add('show');
        }

        function closeModal(id) {
            document.getElementById(id).classList.remove('show');
        }

        // ========== FILTER ==========
        function filterTasks() {
            const status = document.getElementById('filterStatus').value.toLowerCase();
            const priority = document.getElementById('filterPriority').value.toLowerCase();
            const search = document.getElementById('searchTask').value.toLowerCase();

            const items = document.querySelectorAll('.task-list-item');
            let visibleCount = 0;

            items.forEach(item => {
                const itemStatus = (item.getAttribute('data-status') || '').toLowerCase();
                const itemPriority = (item.getAttribute('data-priority') || '').toLowerCase();
                const itemName = (item.getAttribute('data-taskname') || '').toLowerCase();

                const matchStatus = !status || itemStatus === status;
                const matchPriority = !priority || itemPriority === priority;
                const matchSearch = !search || itemName.includes(search);

                if (matchStatus && matchPriority && matchSearch) {
                    item.style.display = '';
                    visibleCount++;
                } else {
                    item.style.display = 'none';
                }
            });

            const container = document.getElementById('taskList');
            if (visibleCount === 0 && container) {
                if (!document.getElementById('noResultsMessage')) {
                    container.innerHTML = `
                        <div class="empty-state" id="noResultsMessage">
                            <i class="fas fa-search"></i>
                            <h3>Không tìm thấy kết quả</h3>
                            <p>Không có công việc nào phù hợp với bộ lọc của bạn.</p>
                        </div>
                    `;
                }
            }
        }

        document.getElementById('filterStatus')?.addEventListener('change', filterTasks);
        document.getElementById('filterPriority')?.addEventListener('change', filterTasks);
        document.getElementById('searchTask')?.addEventListener('input', filterTasks);

        // ========== VIEW TASK DETAIL ==========
        async function viewTaskDetail(userTaskId) {
            try {
                showModal('taskDetailModal');
                document.getElementById('taskDetailContent').innerHTML = `
                    <div style="text-align: center; padding: 3rem;">
                        <i class="fas fa-spinner fa-spin" style="font-size: 3rem; color: var(--secondary);"></i>
                        <p style="margin-top: 1rem; color: var(--text-muted);">Đang tải...</p>
                    </div>
                `;

                const response = await fetch(`/Staff/GetTaskDetail?userTaskId=${userTaskId}`);
                const data = await response.json();

                if (data.success) {
                    const task = data.task;
                    const statusBadgeClass = `status-${(task.status || 'todo').toLowerCase()}`;
                    const priorityBadgeClass = `priority-${(task.priority || 'medium').toLowerCase()}`;

                    document.getElementById('taskDetailContent').innerHTML = `
                        <div style="margin-bottom: 1.5rem;">
                            <h4 style="font-size: 1.375rem; font-weight: 700; color: var(--text); margin-bottom: 1rem;">
                                ${task.taskName}
                            </h4>
                            <div style="display: flex; gap: 0.75rem; flex-wrap: wrap; margin-bottom: 1rem;">
                                <div class="task-status-badge ${statusBadgeClass}">
                                    <i class="fas fa-${task.statusIcon}"></i>
                                    <span>${task.statusText}</span>
                                </div>
                                <div class="task-priority-badge ${priorityBadgeClass}">
                                    <i class="fas fa-flag"></i>
                                    ${task.priority}
                                </div>
                                ${task.isOverdue ? '<span class="overdue-badge"><i class="fas fa-exclamation-triangle"></i> QUÁ HẠN</span>' : ''}
                                ${task.isCompletedLate ? '<span class="overdue-badge" style="background: var(--warning);"><i class="fas fa-clock"></i> HOÀN THÀNH MUỘN</span>' : ''}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label"><i class="fas fa-align-left"></i> Mô tả</label>
                            <div style="padding: 1rem; background: var(--light); border-radius: 0.75rem; color: var(--text); line-height: 1.6;">
                                ${task.description || '<em style="color: var(--text-muted);">Không có mô tả</em>'}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label"><i class="fas fa-laptop-code"></i> Nền tảng</label>
                            <div style="padding: 0.75rem 1rem; background: var(--light); border-radius: 0.75rem; color: var(--text);">
                                ${task.platform}
                            </div>
                        </div>

                        ${task.reportLink ? `
                        <div class="form-group">
                            <label class="form-label"><i class="fas fa-link"></i> Link báo cáo</label>
                            <div style="padding: 0.75rem 1rem; background: var(--light); border-radius: 0.75rem;">
                                <a href="${task.reportLink}" target="_blank"
                                   style="color: var(--info); text-decoration: none; word-break: break-all;">
                                    <i class="fas fa-external-link-alt"></i> ${task.reportLink}
                                </a>
                            </div>
                        </div>
                        ` : ''}

                        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 1rem; margin-top: 1.5rem;">
                            <div class="form-group" style="margin-bottom: 0;">
                                <label class="form-label"><i class="fas fa-calendar-alt"></i> Deadline</label>
                                <div style="padding: 0.75rem 1rem; background: var(--light); border-radius: 0.75rem; color: var(--text);">
                                    ${task.deadline}
                                </div>
                            </div>
                            <div class="form-group" style="margin-bottom: 0;">
                                <label class="form-label"><i class="fas fa-clock"></i> Tạo lúc</label>
                                <div style="padding: 0.75rem 1rem; background: var(--light); border-radius: 0.75rem; color: var(--text);">
                                    ${task.createdAt || 'N/A'}
                                </div>
                            </div>
                            <div class="form-group" style="margin-bottom: 0;">
                                <label class="form-label"><i class="fas fa-sync-alt"></i> Cập nhật lúc</label>
                                <div style="padding: 0.75rem 1rem; background: var(--light); border-radius: 0.75rem; color: var(--text);">
                                    ${task.updatedAt}
                                </div>
                            </div>
                        </div>
                    `;
                } else {
                    document.getElementById('taskDetailContent').innerHTML = `
                        <div class="empty-state">
                            <i class="fas fa-exclamation-triangle" style="color: var(--danger);"></i>
                            <h3>Lỗi</h3>
                            <p>${data.message}</p>
                        </div>
                    `;
                }
            } catch (error) {
                console.error('Error:', error);
                document.getElementById('taskDetailContent').innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-exclamation-circle" style="color: var(--danger);"></i>
                        <h3>Lỗi kết nối</h3>
                        <p>Không thể tải thông tin công việc.</p>
                    </div>
                `;
            }
        }

        // ========== LOAD TESTERS ==========
        async function loadTesters() {
            try {
                const response = await fetch('/Staff/GetTesters');
                const data = await response.json();

                if (data.success && data.testers) {
                    allTesters = data.testers;
                    const select = document.getElementById('selectTester');
                    if (select) {
                        select.innerHTML = '<option value="">-- Chọn Tester --</option>';

                        data.testers.forEach(tester => {
                            const option = document.createElement('option');
                            option.value = tester.userId;
                            option.textContent = `${tester.fullName} (${tester.departmentName})`;
                            select.appendChild(option);
                        });
                    }
                }
            } catch (error) {
                console.error('Error loading testers:', error);
            }
        }

        // ========== UPDATE TASK PROGRESS - FIXED VERSION ==========
        async function updateTaskProgress(userTaskId) {
            if (!userPermissions) {
                alert('Vui lòng đợi hệ thống tải thông tin quyền...');
                return;
            }

            try {
                // ✅ LẤY TRẠNG THÁI HIỆN TẠI TỪ DOM
                const taskItems = document.querySelectorAll('.task-list-item');
                let currentStatus = 'TODO';

                taskItems.forEach(item => {
                    const viewButton = item.querySelector(`button[onclick*="viewTaskDetail(${userTaskId})"]`);
                    const updateButton = item.querySelector(`button[onclick*="updateTaskProgress(${userTaskId})"]`);

                    if (viewButton || updateButton) {
                        currentStatus = item.getAttribute('data-status') || 'TODO';
                    }
                });

                console.log('🔍 Current Status:', currentStatus);
                console.log('👤 User Permissions:', userPermissions);

                document.getElementById('updateUserTaskId').value = userTaskId;
                document.getElementById('currentTaskStatus').value = currentStatus;
                document.getElementById('updateReportLink').value = '';
                document.getElementById('reportLinkGroup').style.display = 'none';
                document.getElementById('testerSelectGroup').style.display = 'none';

                // ✅ POPULATE STATUS SELECT DỰA VÀO QUYỀN
                const statusSelect = document.getElementById('updateStatus');
                statusSelect.innerHTML = '';

                // ✅ LOGIC: DỰA VÀO STATUS HIỆN TẠI VÀ QUYỀN
                if (userPermissions.canSendToTesting) {
                    // ✅ DEV: TODO -> InProgress -> Testing
                    if (currentStatus === 'TODO') {
                        statusSelect.innerHTML = `
                            <option value="">-- Chọn trạng thái --</option>
                            <option value="InProgress">Đang làm</option>
                        `;
                    } else if (currentStatus === 'InProgress') {
                        statusSelect.innerHTML = `
                            <option value="">-- Chọn trạng thái --</option>
                            <option value="TODO">Tạm dừng (về TODO)</option>
                            <option value="Testing">Gửi test</option>
                        `;
                    } else if (currentStatus === 'Reopen') {
                        statusSelect.innerHTML = `
                            <option value="">-- Chọn trạng thái --</option>
                            <option value="InProgress">Tiếp tục sửa</option>
                        `;
                    } else {
                        statusSelect.innerHTML = '<option value="">⚠️ Không có trạng thái khả dụng</option>';
                    }
                } else {
                    // ✅ NON-DEV: TODO -> InProgress -> Done
                    if (currentStatus === 'TODO') {
                        statusSelect.innerHTML = `
                            <option value="">-- Chọn trạng thái --</option>
                            <option value="InProgress">Đang làm</option>
                        `;
                    } else if (currentStatus === 'InProgress') {
                        statusSelect.innerHTML = `
                            <option value="">-- Chọn trạng thái --</option>
                            <option value="TODO">Tạm dừng (về TODO)</option>
                            <option value="Done">Hoàn thành</option>
                        `;
                    } else if (currentStatus === 'Reopen') {
                        statusSelect.innerHTML = `
                            <option value="">-- Chọn trạng thái --</option>
                            <option value="InProgress">Tiếp tục sửa</option>
                        `;
                    } else {
                        statusSelect.innerHTML = '<option value="">⚠️ Không có trạng thái khả dụng</option>';
                    }
                }

                console.log('📋 Status options loaded:', statusSelect.innerHTML);
                showModal('updateProgressModal');
            } catch (error) {
                console.error('❌ Error:', error);
                alert('Có lỗi xảy ra khi mở form cập nhật: ' + error.message);
            }
        }

        // ========== STATUS CHANGE HANDLER ==========
        document.getElementById('updateStatus')?.addEventListener('change', function() {
            const status = this.value;
            const reportLinkGroup = document.getElementById('reportLinkGroup');
            const testerSelectGroup = document.getElementById('testerSelectGroup');

            console.log('🔄 Status changed to:', status);

            // Hiện/ẩn report link
            if (status === 'InProgress' || status === 'Testing' || status === 'Done') {
                reportLinkGroup.style.display = 'block';
            } else {
                reportLinkGroup.style.display = 'none';
            }

            // Hiện/ẩn tester select
            if (userPermissions && userPermissions.canSendToTesting && status === 'Testing') {
                testerSelectGroup.style.display = 'block';
                console.log('✅ Showing tester select');
            } else {
                testerSelectGroup.style.display = 'none';
            }
        });

        // ========== SUBMIT UPDATE ==========
        async function submitUpdateProgress() {
            const userTaskId = document.getElementById('updateUserTaskId').value;
            const status = document.getElementById('updateStatus').value;
            const reportLink = document.getElementById('updateReportLink').value.trim();
            const selectTester = document.getElementById('selectTester');
            const testerId = selectTester ? selectTester.value : null;

            console.log('📤 Submitting:', { userTaskId, status, reportLink, testerId });

            // ✅ VALIDATE BẮT BUỘC
            if (!status || status === '') {
                alert('❌ Vui lòng chọn trạng thái');
                document.getElementById('updateStatus').focus();
                return;
            }

            // ✅ CHỈ BẮT BUỘC TESTER KHI GỬI TEST VÀ CÓ QUYỀN
            if (userPermissions && userPermissions.canSendToTesting && status === 'Testing') {
                if (!testerId || testerId === '') {
                    alert('❌ Vui lòng chọn Tester trước khi gửi test');
                    document.getElementById('selectTester').focus();
                    return;
                }
            }

            // ✅ VALIDATE REPORT LINK (NẾU CÓ)
            if (reportLink && !isValidUrl(reportLink)) {
                alert('❌ Link báo cáo không hợp lệ. Vui lòng nhập URL đầy đủ (ví dụ: https://example.com)');
                document.getElementById('updateReportLink').focus();
                return;
            }

            try {
                const payload = {
                    userTaskId: parseInt(userTaskId),
                    status: status,
                    reportLink: reportLink || null,
                    testerId: testerId ? parseInt(testerId) : null
                };

                console.log('🚀 Payload gửi đi:', payload);

                const response = await fetch('/Staff/UpdateTaskProgress', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                const data = await response.json();
                console.log('📥 Response nhận về:', data);

                if (data.success) {
                    alert(data.message);
                    closeModal('updateProgressModal');
                    location.reload();
                } else {
                    alert('❌ ' + (data.message || 'Có lỗi xảy ra'));
                }
            } catch (error) {
                console.error('💥 Lỗi:', error);
                alert('❌ Có lỗi xảy ra khi cập nhật: ' + error.message);
            }
        }

        // ========== VALIDATE URL ==========
        function isValidUrl(string) {
            try {
                const url = new URL(string);
                return url.protocol === 'http:' || url.protocol === 'https:';
            } catch (_) {
                return false;
            }
        }

        // ========== INIT ==========
        document.addEventListener('DOMContentLoaded', async function() {
            console.log('🚀 Initializing...');
            await loadUserPermissions();
            console.log('✅ Initialization complete');

            // ✅ SETUP MODAL CLOSE BEHAVIOR - SAU KHI DOM LOADED
            setupModalCloseBehavior();
        });

        // ========== CLOSE ON OUTSIDE CLICK - FIXED ==========
        function setupModalCloseBehavior() {
            // ✅ XỬ LÝ ĐÓNG MODAL KHI CLICK VÀO OVERLAY
            document.querySelectorAll('.modal-overlay').forEach(overlay => {
                overlay.addEventListener('mousedown', function(e) {
                    // Chỉ đóng khi click TRỰC TIẾP vào overlay (background đen mờ)
                    if (e.target === this) {
                        console.log('🚪 Closing modal by overlay click');
                        this.classList.remove('show');
                    }
                });
            });

            // ✅ NGĂN MODAL ĐÓNG KHI CLICK VÀO NỘI DUNG BÊN TRONG
            document.querySelectorAll('.modal-dialog').forEach(dialog => {
                dialog.addEventListener('mousedown', function(e) {
                    e.stopPropagation(); // Ngăn event bubble lên overlay
                });
            });

            console.log('✅ Modal close behavior setup complete');
        }
    </script>
}