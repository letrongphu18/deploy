@model AIHUBOS.Models.OvertimeRequest
<link href="~/css/requestcard.css" rel="stylesheet" />

<div class="rq-card rq-card-overtime">
    <div class="rq-card-header">
        <div class="rq-card-type">
            <i class="fas fa-clock"></i>
            <span>Tăng ca</span>
        </div>
        <div style="display: flex; align-items: center; gap: 8px;">
            @if (Model.IsExpired == true)
            {
                <span class="rq-status-badge rq-status-expired">
                    <i class="fas fa-exclamation-triangle"></i>
                    <span>Hết hạn</span>
                </span>
            }
            <span class="rq-status-badge rq-status-@(Model.Status?.ToLower() ?? "unknown")">
                @if (Model.Status == "Pending")
                {
                    <i class="fas fa-clock"></i>
                    <span>Chờ duyệt</span>
                }
                else if (Model.Status == "Approved")
                {
                    <i class="fas fa-check"></i>
                    <span>Đã duyệt</span>
                }
                else if (Model.Status == "Rejected")
                {
                    <i class="fas fa-times"></i>
                    <span>Từ chối</span>
                }
                else
                {
                    <span>@Model.Status</span>
                }
            </span>
        </div>
    </div>

    <div class="rq-user-section">
        <img src="@(Model?.User?.Avatar ?? "/images/default-avatar.png")"
             alt="Avatar"
             class="rq-user-avatar" />
        <div class="rq-user-info">
            <strong>@Model?.User?.FullName</strong>
            <small>@Model?.User?.Email</small>
        </div>
    </div>

    <div class="rq-card-body">
        <div class="rq-info-row">
            <div class="rq-info-item">
                <i class="fas fa-calendar"></i>
                <div>
                    <small>Ngày làm việc</small>
                    <strong>@Model.WorkDate.ToString("dd/MM/yyyy")</strong>
                </div>
            </div>
            <div class="rq-info-item">
                <i class="fas fa-sign-out-alt"></i>
                <div>
                    <small>Check-out</small>
                    <strong>@Model.ActualCheckOutTime.ToString("HH:mm")</strong>
                </div>
            </div>
        </div>

        <div class="rq-stats">
            <div class="rq-stat-box">
                <i class="fas fa-clock"></i>
                <span><strong>@Model.OvertimeHours</strong> giờ tăng ca</span>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Reason))
        {
            <div class="rq-reason">
                <i class="fas fa-comment-dots"></i>
                <p>@Model.Reason</p>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.TaskDescription))
        {
            <div class="rq-task">
                <i class="fas fa-tasks"></i>
                <div>
                    <small>Công việc thực hiện:</small>
                    <p>@Model.TaskDescription</p>
                </div>
            </div>
        }

        <div class="rq-expiry">
            <i class="far fa-calendar-times"></i>
            <small class="@(Model.IsExpired == true ? "rq-expired-text" : "")">
                Hết hạn: @Model.ExpiryDate.ToString("dd/MM/yyyy HH:mm")
                @if (Model.IsExpired == true)
                {
                    <span>(Đã hết hạn)</span>
                }
            </small>
        </div>

        <div class="rq-meta">
            <i class="far fa-clock"></i>
            <small>
                Tạo: @(Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")
            </small>
        </div>
    </div>

    <div class="rq-actions">
        @if (Model.Status == "Pending" && Model.IsExpired != true)
        {
            <button type="button" class="rq-btn rq-btn-approve"
                    onclick="openReviewModal(@Model.OvertimeRequestId, 'Overtime', '@Model.User?.FullName', 'Tăng ca', '@Model.WorkDate.ToString("dd/MM/yyyy")', '@Model.OvertimeHours', '@Model.ActualCheckOutTime.ToString("HH:mm")', '@(Model.Reason?.Replace("'", "\\'").Replace("\n", " ") ?? "")', '@(Model.TaskDescription?.Replace("'", "\\'").Replace("\n", " ") ?? "")')">
                <i class="fas fa-check"></i>
                <span>Duyệt</span>
            </button>
            <button type="button" class="rq-btn rq-btn-reject"
                    onclick="openRejectModal(@Model.OvertimeRequestId, 'Overtime')">
                <i class="fas fa-times"></i>
                <span>Từ chối</span>
            </button>
        }
        else
        {
            <button type="button" class="rq-btn rq-btn-view"
                    onclick="viewRequestDetail(@Model.OvertimeRequestId, 'Overtime')">
                <i class="fas fa-eye"></i>
                <span>Chi tiết</span>
            </button>
        }
    </div>

    @if (Model.Status != "Pending" && Model.ReviewedAt.HasValue)
    {
        <div class="rq-review-info">
            <i class="fas fa-user-check"></i>
            <small>
                @if (Model.ReviewedByNavigation != null)
                {
                    <text>Duyệt bởi: <strong>@Model.ReviewedByNavigation.FullName</strong></text>
                }
                else if (Model.ReviewedBy.HasValue)
                {
                    <text>Duyệt bởi Admin (ID: @Model.ReviewedBy.Value)</text>
                }
                else
                {
                    <text>Đã duyệt</text>
                }
                <text> lúc @Model.ReviewedAt.Value.ToString("dd/MM/yyyy HH:mm")</text>
            </small>
            @if (!string.IsNullOrWhiteSpace(Model.ReviewNote))
            {
                <div class="rq-review-note">
                    <i class="fas fa-sticky-note"></i>
                    <span>@Model.ReviewNote</span>
                </div>
            }
        </div>
    }
</div>

<script src="~/js/admin-request.js"></script>
<script>
    function openReviewModal(requestId, requestType, userName, type, date1, date2, extra, reason, taskDesc) {
        currentRequestId = requestId;
        currentRequestType = requestType;

        let detailsHTML = `
            <div class="rq-modal-review-details">
                <div class="rq-review-user-section">
                    <h6><i class="fas fa-user"></i> Thông tin nhân viên</h6>
                    <p style="margin-bottom: 0;"><strong>${userName}</strong></p>
                </div>
                <div class="rq-review-request-section">
                    <h6><i class="fas fa-file-alt"></i> Chi tiết đề xuất</h6>
        `;

        if (requestType === 'Leave') {
            detailsHTML += `
                <p><strong>Loại:</strong> ${type}</p>
                <p><strong>Từ ngày:</strong> ${date1}</p>
                <p><strong>Đến ngày:</strong> ${date2}</p>
                <p><strong>Số ngày:</strong> ${extra}</p>
            `;
        } else if (requestType === 'Late') {
            detailsHTML += `
                <p><strong>Loại:</strong> ${type}</p>
                <p><strong>Ngày:</strong> ${date1}</p>
                <p><strong>Dự kiến đến:</strong> ${date2}</p>
            `;
        } else if (requestType === 'Overtime') {
            detailsHTML += `
                <p><strong>Ngày làm việc:</strong> ${date1}</p>
                <p><strong>Giờ tăng ca:</strong> ${date2}h</p>
                <p><strong>Check-out:</strong> ${extra}</p>
                ${taskDesc ? `<p><strong>Công việc:</strong> ${taskDesc}</p>` : ''}
            `;
        }

        if (reason) {
            detailsHTML += `<p><strong>Lý do:</strong> ${reason}</p>`;
        }

        detailsHTML += `</div></div>`;

        document.getElementById('reviewDetails').innerHTML = detailsHTML;
        document.getElementById('reviewNote').value = '';

        new bootstrap.Modal(document.getElementById('reviewModal')).show();
    }
</script>