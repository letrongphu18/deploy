            // ============================================
            // ADD MEMBER MODAL
            // ============================================
            async function openAddMemberModal() {
                const { value: formValues } = await Swal.fire({
                    title: 'Thêm thành viên vào dự án',
                    html: `
                        <div style="text-align: left;">
                            <label style="display: block; margin-bottom: 0.5rem; font-weight: 600;">Chọn nhân viên</label>
                            <select id="swal-user" class="swal2-input" style="width: 100%; padding: 0.75rem;">
                                <option value="">-- Chọn nhân viên --</option>
                                ${await getUserOptions()}
                            </select>
                            <label style="display: block; margin-top: 1rem; margin-bottom: 0.5rem; font-weight: 600;">Vai trò</label>
                            <select id="swal-role" class="swal2-input" style="width: 100%; padding: 0.75rem;">
                                <option value="Member">Thành viên</option>
                                <option value="Leader">Leader</option>
                            </select>
                        </div>
                    `,
                    focusConfirm: false,
                    showCancelButton: true,
                    confirmButtonText: 'Thêm',
                    cancelButtonText: 'Hủy',
                    preConfirm: () => {
                        const userId = document.getElementById('swal-user').value;
                        const role = document.getElementById('swal-role').value;

                        if (!userId) {
                            Swal.showValidationMessage('Vui lòng chọn nhân viên');
                            return false;
                        }

                        return { userId: parseInt(userId), role };
                    }
                });

                if (formValues) {
                    await addMember(formValues.userId, formValues.role);
                }
            }

            async function getUserOptions() {
                try {
                    const response = await fetch('@Url.Action("GetAllUsers", "Admin")');
                    const result = await response.json();

                    if (result.success) {
                        return result.users
                            .filter(u => !currentMembers.includes(u.userId))
                            .map(u => `<option value="${u.userId}">${u.fullName} (${u.departmentName})</option>`)
                            .join('');
                    }
                } catch (error) {
                    console.error('Error:', error);
                }
                return '';
            }

            async function addMember(userId, role) {
                try {
                    const response = await fetch('@Url.Action("ManageProjectMember", "Admin")', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            projectId: projectId,
                            userId: userId,
                            action: 'Add',
                            role: role
                        })
                    });

                    const result = await response.json();

                    if (result.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Thành công!',
                            text: result.message,
                            timer: 2000
                        }).then(() => location.reload());
                    } else {
                        Swal.fire('Lỗi!', result.message, 'error');
                    }
                } catch (error) {
                    Swal.fire('Lỗi!', 'Có lỗi xảy ra: ' + error.message, 'error');
                }
            }

            async function removeMember(userId) {
                const result = await Swal.fire({
                    title: 'Xác nhận xóa',
                    text: 'Bạn có chắc muốn xóa thành viên này khỏi dự án?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#ef4444',
                    cancelButtonColor: '#64748b',
                    confirmButtonText: 'Xóa',
                    cancelButtonText: 'Hủy'
                });

                if (result.isConfirmed) {
                    try {
                        const response = await fetch('@Url.Action("ManageProjectMember", "Admin")', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({
                                projectId: projectId,
                                userId: userId,
                                action: 'Remove'
                            })
                        });

                        const res = await response.json();

                        if (res.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Đã xóa!',
                                text: res.message,
                                timer: 2000
                            }).then(() => location.reload());
                        } else {
                            Swal.fire('Lỗi!', res.message, 'error');
                        }
                    } catch (error) {
                        Swal.fire('Lỗi!', 'Có lỗi xảy ra: ' + error.message, 'error');
                    }
                }
            }

