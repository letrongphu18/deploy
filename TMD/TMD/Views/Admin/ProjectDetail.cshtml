@model TMD.Models.Project

@{
    ViewData["Title"] = $"Chi tiết dự án - {Model.ProjectName}";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<link rel="stylesheet" href="~/css/project-management.css" />
<link href="~/css/sweetalert2-custom.css" rel="stylesheet" />

<div class="pm-container">
    <!-- DETAIL HEADER -->
    <div class="pm-detail-header">
        <div class="pm-detail-title-row">
            <div>
                <div class="pm-detail-code">@Model.ProjectCode</div>
                <h1 class="pm-detail-title">@Model.ProjectName</h1>
            </div>
            <div class="pm-detail-badges">
                @{
                    var statusClass = Model.Status switch
                    {
                        "Planning" => "pm-badge-planning",
                        "InProgress" => "pm-badge-progress",
                        "Completed" => "pm-badge-completed",
                        "OnHold" => "pm-badge-onhold",
                        _ => "pm-badge-progress"
                    };
                    var statusText = Model.Status switch
                    {
                        "Planning" => "Lên kế hoạch",
                        "InProgress" => "Đang triển khai",
                        "Completed" => "Hoàn thành",
                        "OnHold" => "Tạm dừng",
                        _ => Model.Status
                    };
                    var priorityClass = Model.Priority switch
                    {
                        "High" => "pm-badge-high",
                        "Medium" => "pm-badge-medium",
                        "Low" => "pm-badge-low",
                        _ => "pm-badge-medium"
                    };
                }
                <span class="pm-badge @statusClass" style="color: white;">
                    <i class="fas fa-circle" style="font-size: 0.5rem;"></i>
                    @statusText
                </span>
                <span class="pm-badge @priorityClass" style="color: white;">
                    <i class="fas fa-flag"></i>
                    @(Model.Priority == "High" ? "Cao" : Model.Priority == "Medium" ? "Trung bình" : "Thấp")
                </span>
            </div>
        </div>

        <div class="pm-detail-meta-grid">
            <div class="pm-detail-meta-item">
                <div class="pm-detail-meta-icon">
                    <i class="fas fa-user-tie"></i>
                </div>
                <div class="pm-detail-meta-content">
                    <div class="pm-detail-meta-label">Leader</div>
                    <div class="pm-detail-meta-value">@(Model.Leader?.FullName ?? "Chưa chỉ định")</div>
                </div>
            </div>

            <div class="pm-detail-meta-item">
                <div class="pm-detail-meta-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="pm-detail-meta-content">
                    <div class="pm-detail-meta-label">Thành viên</div>
                    <div class="pm-detail-meta-value">@(Model.ProjectMembers?.Count(pm => pm.IsActive) ?? 0) người</div>
                </div>
            </div>

            <div class="pm-detail-meta-item">
                <div class="pm-detail-meta-icon">
                    <i class="fas fa-tasks"></i>
                </div>
                <div class="pm-detail-meta-content">
                    <div class="pm-detail-meta-label">Tasks</div>
                    <div class="pm-detail-meta-value">@(Model.Tasks?.Count ?? 0) tasks</div>
                </div>
            </div>

            <div class="pm-detail-meta-item">
                <div class="pm-detail-meta-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <div class="pm-detail-meta-content">
                    <div class="pm-detail-meta-label">Tiến độ</div>
                    <div class="pm-detail-meta-value">@((Model.Progress ?? 0).ToString("F1"))%</div>
                </div>
            </div>
        </div>
    </div>

    <!-- ACTION BUTTONS -->
    <div class="pm-d-flex pm-gap-2 pm-mb-3">
        <a href="@Url.Action("ProjectList", "Admin")" class="pm-btn pm-btn-secondary">
            <i class="fas fa-arrow-left"></i>
            Quay lại
        </a>
        <a href="@Url.Action("EditProject", "Admin", new { id = Model.ProjectId })" class="pm-btn pm-btn-primary">
            <i class="fas fa-edit"></i>
            Chỉnh sửa dự án
        </a>
        <button type="button" class="pm-btn pm-btn-success" onclick="openAddTaskModal()">
            <i class="fas fa-plus"></i>
            Thêm task
        </button>
        <button type="button" class="pm-btn pm-btn-primary" onclick="openAddMemberModal()">
            <i class="fas fa-user-plus"></i>
            Thêm thành viên
        </button>
    </div>

    <!-- TABS -->
    <div class="pm-tabs">
        <button class="pm-tab active" data-tab="overview">
            <i class="fas fa-info-circle"></i>
            Tổng quan
        </button>
        <button class="pm-tab" data-tab="tasks">
            <i class="fas fa-tasks"></i>
            Tasks (@(Model.Tasks?.Count ?? 0))
        </button>
        <button class="pm-tab" data-tab="members">
            <i class="fas fa-users"></i>
            Thành viên (@(Model.ProjectMembers?.Count(pm => pm.IsActive) ?? 0))
        </button>
    </div>

    <!-- TAB CONTENT: OVERVIEW -->
    <div class="pm-tab-content active" id="overview">
        <div class="pm-card">
            <div class="pm-card-header">
                <h5 class="pm-card-title">
                    <i class="fas fa-align-left"></i>
                    Mô tả dự án
                </h5>
            </div>
            <div class="pm-card-body">
                <p style="color: var(--text); line-height: 1.6;">
                    @(Model.Description ?? "Chưa có mô tả cho dự án này.")
                </p>
            </div>
        </div>

        <div class="pm-form-row">
            <div class="pm-card">
                <div class="pm-card-header">
                    <h5 class="pm-card-title">
                        <i class="fas fa-calendar"></i>
                        Thông tin thời gian
                    </h5>
                </div>
                <div class="pm-card-body">
                    <div style="display: flex; flex-direction: column; gap: 1rem;">
                        <div>
                            <strong style="color: var(--text-muted);">Ngày bắt đầu:</strong>
                            <div style="color: var(--text); font-weight: 600;">
                                @(Model.StartDate?.ToString("dd/MM/yyyy") ?? "Chưa xác định")
                            </div>
                        </div>
                        <div>
                            <strong style="color: var(--text-muted);">Ngày kết thúc:</strong>
                            <div style="color: var(--text); font-weight: 600;">
                                @(Model.EndDate?.ToString("dd/MM/yyyy") ?? "Chưa xác định")
                            </div>
                        </div>
                        @if (Model.CompletedAt.HasValue)
                        {
                            <div>
                                <strong style="color: var(--text-muted);">Hoàn thành vào:</strong>
                                <div style="color: var(--success); font-weight: 600;">
                                    @Model.CompletedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="pm-card">
                <div class="pm-card-header">
                    <h5 class="pm-card-title">
                        <i class="fas fa-info"></i>
                        Thông tin bổ sung
                    </h5>
                </div>
                <div class="pm-card-body">
                    <div style="display: flex; flex-direction: column; gap: 1rem;">
                        <div>
                            <strong style="color: var(--text-muted);">Phòng ban:</strong>
                            <div style="color: var(--text); font-weight: 600;">
                                @(Model.Department?.DepartmentName ?? "N/A")
                            </div>
                        </div>
                        @if (Model.Budget.HasValue && Model.Budget > 0)
                        {
                            <div>
                                <strong style="color: var(--text-muted);">Ngân sách:</strong>
                                <div style="color: var(--text); font-weight: 600;">
                                    @Model.Budget.Value.ToString("N0") VNĐ
                                </div>
                            </div>
                        }
                        <div>
                            <strong style="color: var(--text-muted);">Người tạo:</strong>
                            <div style="color: var(--text); font-weight: 600;">
                                Admin
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- TAB CONTENT: TASKS - UPDATED VERSION -->
    <div class="pm-tab-content" id="tasks">
        <div class="pm-card">
            <div class="pm-card-body">
                <div class="pm-tasks-list" id="tasksList">
                    @if (Model.Tasks != null && Model.Tasks.Any())
                    {
                        @foreach (var task in Model.Tasks.OrderByDescending(t => t.Priority == "High" ? 1 : t.Priority == "Medium" ? 2 : 3))
                        {
                            var totalAssigned = task.UserTasks?.Count ?? 0;
                            var todoCount = task.UserTasks?.Count(ut => ut.Status == "TODO") ?? 0;
                            var inProgressCount = task.UserTasks?.Count(ut => ut.Status == "InProgress") ?? 0;
                            var testingCount = task.UserTasks?.Count(ut => ut.Status == "Testing") ?? 0;
                            var doneCount = task.UserTasks?.Count(ut => ut.Status == "Done") ?? 0;
                            var reopenCount = task.UserTasks?.Count(ut => ut.Status == "Reopen") ?? 0;

                            var assignedUsers = task.UserTasks?.Select(ut => ut.User).Where(u => u != null).Take(3).ToList() ?? new List<TMD.Models.User>();
                            var remainingCount = totalAssigned - assignedUsers.Count;

                            <div class="pm-task-card-new" onclick="openTaskDetailModal(@task.TaskId)">
                                <div class="pm-task-header">
                                    <div>
                                        <h4 class="pm-task-title">@task.TaskName</h4>
                                        <div class="pm-task-meta">
                                            @if (task.Deadline.HasValue)
                                            {
                                                <span class="pm-task-meta-item">
                                                    <i class="fas fa-calendar"></i>
                                                    @task.Deadline.Value.ToString("dd/MM/yyyy")
                                                </span>
                                            }
                                            @if (!string.IsNullOrEmpty(task.Platform))
                                            {
                                                <span class="pm-task-meta-item">
                                                    <i class="fas fa-code"></i>
                                                    @task.Platform
                                                </span>
                                            }
                                        </div>
                                    </div>
                                    <div class="pm-project-badges">
                                        @{
                                            var taskPriorityClass = task.Priority switch
                                            {
                                                "High" => "pm-badge-high",
                                                "Medium" => "pm-badge-medium",
                                                "Low" => "pm-badge-low",
                                                _ => "pm-badge-medium"
                                            };
                                        }
                                        <span class="pm-badge @taskPriorityClass">
                                            <i class="fas fa-flag"></i>
                                            @(task.Priority ?? "Medium")
                                        </span>
                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(task.Description))
                                {
                                    <p style="color: var(--text-muted); font-size: 0.875rem; margin-top: 0.5rem;">
                                        @task.Description
                                    </p>
                                }

                                <!-- STATUS BADGES -->
                                <div class="pm-task-status-row">
                                    @if (todoCount > 0)
                                    {
                                        <span class="pm-status-badge pm-status-todo">
                                            <i class="fas fa-circle"></i>
                                            TODO: @todoCount
                                        </span>
                                    }
                                    @if (inProgressCount > 0)
                                    {
                                        <span class="pm-status-badge pm-status-inprogress">
                                            <i class="fas fa-spinner"></i>
                                            Đang làm: @inProgressCount
                                        </span>
                                    }
                                    @if (testingCount > 0)
                                    {
                                        <span class="pm-status-badge pm-status-testing">
                                            <i class="fas fa-vial"></i>
                                            Testing: @testingCount
                                        </span>
                                    }
                                    @if (doneCount > 0)
                                    {
                                        <span class="pm-status-badge pm-status-done">
                                            <i class="fas fa-check-circle"></i>
                                            Done: @doneCount
                                        </span>
                                    }
                                    @if (reopenCount > 0)
                                    {
                                        <span class="pm-status-badge pm-status-reopen">
                                            <i class="fas fa-redo"></i>
                                            Reopen: @reopenCount
                                        </span>
                                    }
                                    @if (totalAssigned == 0)
                                    {
                                        <span class="pm-status-badge" style="background: rgba(107, 114, 128, 0.1); color: #6b7280;">
                                            <i class="fas fa-user-slash"></i>
                                            Chưa giao
                                        </span>
                                    }
                                </div>

                                <!-- ASSIGNED USERS -->
                                @if (totalAssigned > 0)
                                {
                                    <div class="pm-task-assignees">
                                        <span style="font-size: 0.75rem; color: var(--text-muted); margin-right: 0.5rem;">
                                            <i class="fas fa-users"></i> Phụ trách:
                                        </span>
                                        <div class="pm-avatar-group">
                                            @foreach (var user in assignedUsers)
                                            {
                                                var hasAvatar = !string.IsNullOrEmpty(user.Avatar) && user.Avatar != "/images/default-avatar.png";
                                                var initials = user.FullName?.Substring(0, 1).ToUpper() ?? "?";

                                                <div class="pm-avatar-small" title="@user.FullName">
                                                    @if (hasAvatar)
                                                    {
                                                        <img src="@user.Avatar" alt="@user.FullName">
                                                    }
                                                    else
                                                    {
                                                        <span>@initials</span>
                                                    }
                                                </div>
                                            }
                                            @if (remainingCount > 0)
                                            {
                                                <div class="pm-avatar-small pm-avatar-more">
                                                    <span>+@remainingCount</span>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <div class="pm-empty-state">
                            <div class="pm-empty-icon">
                                <i class="fas fa-tasks"></i>
                            </div>
                            <h3 class="pm-empty-title">Chưa có task nào</h3>
                            <p class="pm-empty-text">Thêm task đầu tiên cho dự án này</p>
                            <button type="button" class="pm-btn pm-btn-primary" onclick="openAddTaskModal()">
                                <i class="fas fa-plus"></i>
                                Thêm task
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- TAB CONTENT: MEMBERS -->
    <div class="pm-tab-content" id="members">
        <div class="pm-card">
            <div class="pm-card-body">
                <div class="pm-members-grid" id="membersList">
                    @if (Model.ProjectMembers != null && Model.ProjectMembers.Any(pm => pm.IsActive))
                    {
                        @foreach (var member in Model.ProjectMembers.Where(pm => pm.IsActive).OrderBy(pm => pm.Role == "Leader" ? 0 : 1))
                        {
                            var hasAvatar = !string.IsNullOrEmpty(member.User?.Avatar) &&
                            member.User.Avatar != "/images/default-avatar.png";
                            var initials = member.User?.FullName?.Substring(0, 1).ToUpper() ?? "?";

                            <div class="pm-member-card" data-member-id="@member.UserId">
                                <div class="pm-member-avatar">
                                    @if (hasAvatar)
                                    {
                                        <img src="@member.User.Avatar" alt="@member.User.FullName">
                                    }
                                    else
                                    {
                                        <span>@initials</span>
                                    }
                                </div>
                                <div class="pm-member-info">
                                    <div class="pm-member-name">
                                        @member.User?.FullName
                                        @if (member.Role == "Leader")
                                        {
                                            <span class="pm-badge pm-badge-leader" style="font-size: 0.65rem; padding: 0.25rem 0.5rem;">
                                                <i class="fas fa-crown"></i> Leader
                                            </span>
                                        }
                                    </div>
                                    <div class="pm-member-role">@member.User?.Email</div>
                                    <div class="pm-member-dept">@(member.User?.Department?.DepartmentName ?? "N/A")</div>
                                </div>
                                @if (member.Role != "Leader")
                                {
                                    <button type="button" class="pm-action-btn"
                                            onclick="removeMember(@member.UserId)"
                                            title="Xóa khỏi dự án">
                                        <i class="fas fa-times"></i>
                                    </button>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <div class="pm-empty-state">
                            <div class="pm-empty-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <h3 class="pm-empty-title">Chưa có thành viên</h3>
                            <p class="pm-empty-text">Thêm thành viên vào dự án</p>
                            <button type="button" class="pm-btn pm-btn-primary" onclick="openAddMemberModal()">
                                <i class="fas fa-user-plus"></i>
                                Thêm thành viên
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- TASK DETAIL MODAL -->
<div id="taskDetailModal" class="pm-modal" style="display: none;">
    <div class="pm-modal-content" style="max-width: 800px;">
        <div class="pm-modal-header">
            <h3 id="modalTaskTitle">Chi tiết Task</h3>
            <button type="button" class="pm-modal-close" onclick="closeTaskDetailModal()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="pm-modal-body" id="taskDetailContent">
            <div class="text-center" style="padding: 2rem;">
                <i class="fas fa-spinner fa-spin" style="font-size: 2rem; color: var(--primary);"></i>
                <p style="margin-top: 1rem; color: var(--text-muted);">Đang tải...</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const projectId = @Model.ProjectId;
        const currentMembers = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
        Model.ProjectMembers?.Where(pm => pm.IsActive).Select(pm => pm.UserId).ToList() ?? new List<int>()
    ));

        // ============================================
        // TAB SWITCHING
        // ============================================
        document.querySelectorAll('.pm-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                const targetTab = this.dataset.tab;

                document.querySelectorAll('.pm-tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.pm-tab-content').forEach(c => c.classList.remove('active'));

                this.classList.add('active');
                document.getElementById(targetTab).classList.add('active');
            });
        });

        // ============================================
        // TASK DETAIL MODAL
        // ============================================
        async function openTaskDetailModal(taskId) {
            const modal = document.getElementById('taskDetailModal');
            modal.style.display = 'flex';
            
            try {
                const response = await fetch(`/Admin/GetTaskDetails?id=${taskId}`);
                const result = await response.json();
                
                if (result.success) {
                    const task = result.task;
                    document.getElementById('modalTaskTitle').textContent = task.TaskName;
                    
                    const content = `
                        <div style="display: flex; flex-direction: column; gap: 1.5rem;">
                            <!-- TASK INFO -->
                            <div class="pm-card">
                                <div class="pm-card-header">
                                    <h5 class="pm-card-title">
                                        <i class="fas fa-info-circle"></i>
                                        Thông tin Task
                                    </h5>
                                </div>
                                <div class="pm-card-body">
                                    <div style="display: grid; grid-template-columns: 150px 1fr; gap: 1rem;">
                                        <strong style="color: var(--text-muted);">Mô tả:</strong>
                                        <div style="color: var(--text);">${task.Description || 'Không có mô tả'}</div>
                                        
                                        <strong style="color: var(--text-muted);">Platform:</strong>
                                        <div style="color: var(--text);">${task.Platform || 'N/A'}</div>
                                        
                                        <strong style="color: var(--text-muted);">Deadline:</strong>
                                        <div style="color: var(--text);">${task.DeadlineStr || 'Không có deadline'}</div>
                                        
                                        <strong style="color: var(--text-muted);">Độ ưu tiên:</strong>
                                        <div>
                                            <span class="pm-badge ${task.Priority === 'High' ? 'pm-badge-high' : task.Priority === 'Low' ? 'pm-badge-low' : 'pm-badge-medium'}">
                                                <i class="fas fa-flag"></i> ${task.Priority}
                                            </span>
                                        </div>
                                        
                                        <strong style="color: var(--text-muted);">Trạng thái:</strong>
                                        <div>
                                            <span class="pm-badge ${task.IsActive ? 'pm-badge-progress' : 'pm-badge-onhold'}">
                                                ${task.IsActive ? 'Đang hoạt động' : 'Tạm dừng'}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- STATUS SUMMARY -->
                            <div class="pm-card">
                                <div class="pm-card-header">
                                    <h5 class="pm-card-title">
                                        <i class="fas fa-chart-pie"></i>
                                        Tổng quan tiến độ
                                    </h5>
                                </div>
                                <div class="pm-card-body">
                                    <div style="display: flex; flex-wrap: wrap; gap: 0.5rem;">
                                        ${task.TodoCount > 0 ? `
                                            <span class="pm-status-badge pm-status-todo">
                                                <i class="fas fa-circle"></i>
                                                TODO: ${task.TodoCount}
                                            </span>
                                        ` : ''}
                                        ${task.InProgressCount > 0 ? `
                                            <span class="pm-status-badge pm-status-inprogress">
                                                <i class="fas fa-spinner"></i>
                                                Đang làm: ${task.InProgressCount}
                                            </span>
                                        ` : ''}
                                        ${task.TestingCount > 0 ? `
                                            <span class="pm-status-badge pm-status-testing">
                                                <i class="fas fa-vial"></i>
                                                Testing: ${task.TestingCount}
                                            </span>
                                        ` : ''}
                                        ${task.DoneCount > 0 ? `
                                            <span class="pm-status-badge pm-status-done">
                                                <i class="fas fa-check-circle"></i>
                                                Done: ${task.DoneCount}
                                            </span>
                                        ` : ''}
                                        ${task.ReopenCount > 0 ? `
                                            <span class="pm-status-badge pm-status-reopen">
                                                <i class="fas fa-redo"></i>
                                                Reopen: ${task.ReopenCount}
                                            </span>
                                        ` : ''}
                                    </div>
                                </div>
                            </div>
                            
                            <!-- ASSIGNED USERS -->
                            <div class="pm-card">
                                <div class="pm-card-header">
                                    <h5 class="pm-card-title">
                                        <i class="fas fa-users"></i>
                                        Người phụ trách (${task.AssignedUsers.length})
                                    </h5>
                                </div>
                                <div class="pm-card-body">
                                    ${task.AssignedUsers.length > 0 ? `
                                        <div style="display: flex; flex-direction: column; gap: 0.75rem;">
                                            ${task.AssignedUsers.map(user => `
                                                <div style="display: flex; align-items: center; gap: 0.75rem; padding: 0.5rem; border-radius: 6px; background: var(--bg-light);">
                                                    <div class="pm-avatar-small">
                                                        ${user.Avatar ? 
                                                            `<img src="${user.Avatar}" alt="${user.FullName}">` :
                                                            `<span>${user.FullName.substring(0,1).toUpperCase()}</span>`
                                                        }
                                                    </div>
                                                    <div style="flex: 1;">
                                                        <div style="font-weight: 600; color: var(--text);">${user.FullName}</div>
                                                        <div style="font-size: 0.75rem; color: var(--text-muted);">${user.DepartmentName}</div>
                                                    </div>
                                                    <div>
                                                        <span class="pm-badge pm-badge-${user.StatusClass}">
                                                            ${user.StatusText}
                                                        </span>
                                                    </div>
                                                </div>
                                            `).join('')}
                                        </div>
                                    ` : '<p style="color: var(--text-muted); text-align: center;">Chưa có người phụ trách</p>'}
                                </div>
                            </div>
                        </div>
                    `;
                    
                    document.getElementById('taskDetailContent').innerHTML = content;
                } else {
                    Swal.fire('Lỗi!', result.message, 'error');
                    closeTaskDetailModal();
                }
            } catch (error) {
