@{
    ViewData["Title"] = "Reset mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var user = ViewBag.User as TMD.Models.User;
}

<link href="~/css/reset-user-password.css" rel="stylesheet" />

<div class="container-fluid rp-container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="rp-form-card">
                <div class="rp-form-header">
                    <div class="rp-user-info-header">
                        <div class="rp-user-avatar-large">@user.FullName?.Substring(0, 1)</div>
                        <div>
                            <h4>@user.FullName</h4>
                            <p class="mb-0">@@@user.Username</p>
                        </div>
                    </div>
                </div>

                <div class="rp-form-body">
                    <div class="rp-alert rp-alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <div>
                            <strong>Lưu ý:</strong> Hành động này sẽ thay đổi mật khẩu của người dùng và được ghi lại trong lịch sử.
                        </div>
                    </div>

                    <form id="resetPasswordForm">
                        <input type="hidden" id="userId" value="@user.UserId" />

                        <div class="mb-3">
                            <label class="rp-form-label">Mật khẩu mới <span class="rp-text-danger">*</span></label>
                            <div class="rp-input-group">
                                <input type="password" id="newPassword" class="rp-form-control" placeholder="Nhập mật khẩu mới (tối thiểu 6 ký tự)" required />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword()">
                                    <i class="fas fa-eye" id="toggleIcon"></i>
                                </button>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="rp-form-label">Xác nhận mật khẩu <span class="rp-text-danger">*</span></label>
                            <input type="password" id="confirmPassword" class="rp-form-control" placeholder="Nhập lại mật khẩu mới" required />
                        </div>

                        <div class="mb-4">
                            <label class="rp-form-label">Lý do reset mật khẩu <span class="rp-text-danger">*</span></label>
                            <textarea id="reason" class="rp-form-control rp-form-textarea" rows="3" placeholder="Vui lòng nhập lý do reset mật khẩu..." required></textarea>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="rp-btn rp-btn-danger">
                                <i class="fas fa-key"></i> Reset mật khẩu
                            </button>
                            <a href="/Admin/UserList" class="rp-btn rp-btn-secondary">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function togglePassword() {
            const passwordField = document.getElementById('newPassword');
            const toggleIcon = document.getElementById('toggleIcon');

            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordField.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }

        document.getElementById('resetPasswordForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const userId = parseInt(document.getElementById('userId').value);
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const reason = document.getElementById('reason').value.trim();

            // Validation
            if (newPassword !== confirmPassword) {
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi',
                    text: 'Mật khẩu xác nhận không khớp',
                    confirmButtonColor: '#e74a3b'
                });
                return;
            }

            if (newPassword.length < 6) {
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi',
                    text: 'Mật khẩu phải có ít nhất 6 ký tự',
                    confirmButtonColor: '#e74a3b'
                });
                return;
            }

            if (!reason) {
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi',
                    text: 'Vui lòng nhập lý do reset mật khẩu',
                    confirmButtonColor: '#e74a3b'
                });
                return;
            }

            // Confirm
            const result = await Swal.fire({
                title: 'Xác nhận reset mật khẩu?',
                text: 'Hành động này không thể hoàn tác!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#f56565',
                cancelButtonColor: '#718096',
                confirmButtonText: 'Có, reset ngay!',
                cancelButtonText: 'Hủy'
            });

            if (result.isConfirmed) {
                Swal.fire({
                    title: 'Đang xử lý...',
                    allowOutsideClick: false,
                    didOpen: () => Swal.showLoading()
                });

                try {
                    const response = await fetch('/Admin/ResetUserPasswordJson', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            userId: userId,
                            newPassword: newPassword,
                            reason: reason
                        })
                    });

                    const data = await response.json();

                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Thành công!',
                            text: data.message,
                            confirmButtonColor: '#48bb78'
                        }).then(() => {
                            window.location.href = '/Admin/UserList';
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Thất bại',
                            text: data.message,
                            confirmButtonColor: '#e74a3b'
                        });
                    }
                } catch (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi!',
                        text: 'Có lỗi xảy ra. Vui lòng thử lại.',
                        confirmButtonColor: '#e74a3b'
                    });
                }
            }
        });
    </script>
}