@model List<TMD.Models.PasswordResetHistory>
@{
    ViewData["Title"] = "Lịch sử reset mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/passwordresethistory.css" rel="stylesheet" />

<div class="content-wrapper">
    <!-- PAGE HEADER -->
    <div class="prh-page-header">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            <div>
                <h2 class="prh-page-title">
                    <i class="fas fa-key"></i>
                    Lịch sử reset mật khẩu
                </h2>
                <p class="prh-page-subtitle">Theo dõi tất cả hoạt động reset mật khẩu bởi Admin</p>
            </div>
            <a href="@Url.Action("Dashboard", "Admin")" class="prh-btn-back">
                <i class="fas fa-arrow-left"></i>
                Quay lại
            </a>
        </div>
    </div>

    <!-- STATISTICS CARDS -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="prh-stats-card prh-stats-card--danger">
                <div class="prh-stats-icon">
                    <i class="fas fa-key"></i>
                </div>
                <div class="prh-stats-content">
                    <div class="prh-stats-label">Tổng lượt reset</div>
                    <div class="prh-stats-value">@Model.Count</div>
                </div>
                <div class="prh-stats-trend">
                    <i class="fas fa-chart-line"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="prh-stats-card prh-stats-card--warning">
                <div class="prh-stats-icon">
                    <i class="fas fa-calendar-day"></i>
                </div>
                <div class="prh-stats-content">
                    <div class="prh-stats-label">Reset hôm nay</div>
                    <div class="prh-stats-value">@Model.Count(r => r.ResetTime.HasValue && r.ResetTime.Value.Date == DateTime.Today)</div>
                </div>
                <div class="prh-stats-trend">
                    <i class="fas fa-clock"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="prh-stats-card prh-stats-card--info">
                <div class="prh-stats-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="prh-stats-content">
                    <div class="prh-stats-label">Người dùng đã reset</div>
                    <div class="prh-stats-value">@Model.Select(r => r.UserId).Distinct().Count()</div>
                </div>
                <div class="prh-stats-trend">
                    <i class="fas fa-user-shield"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- PASSWORD RESET TABLE -->
    <div class="prh-card">
        <div class="prh-card-header">
            <h5>
                <i class="fas fa-list"></i>
                Danh sách lịch sử reset (@Model.Count)
            </h5>
        </div>
        <div class="prh-card-body prh-card-body--table">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="prh-table">
                        <thead>
                            <tr>
                                <th><i class="far fa-clock"></i> Thời gian</th>
                                <th><i class="fas fa-user"></i> Người dùng bị reset</th>
                                <th><i class="fas fa-user-shield"></i> Người thực hiện</th>
                                <th><i class="fas fa-info-circle"></i> Lý do</th>
                                <th><i class="fas fa-network-wired"></i> IP Address</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var reset in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="prh-timestamp">
                                            <i class="far fa-calendar-alt"></i>
                                            <div class="prh-timestamp-content">
                                                <div class="prh-timestamp-date">@reset.ResetTime?.ToString("dd/MM/yyyy")</div>
                                                <div class="prh-timestamp-time">@reset.ResetTime?.ToString("HH:mm:ss")</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="prh-user-info">
                                            <div class="prh-user-avatar prh-user-avatar--target">
                                                @if (!string.IsNullOrEmpty(reset.User?.Avatar))
                                                {
                                                    <img src="@reset.User.Avatar" alt="@reset.User?.FullName"
                                                         onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                                    <span style="display:none;">@(reset.User?.FullName?.Substring(0, 1) ?? "?")</span>
                                                }
                                                else
                                                {
                                                    <span>@(reset.User?.FullName?.Substring(0, 1) ?? "?")</span>
                                                }
                                            </div>
                                            <div class="prh-user-details">
                                                <div class="prh-user-name">@(reset.User?.FullName ?? "N/A")</div>
                                                <div class="prh-user-username">@@@(reset.User?.Username ?? "unknown")</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="prh-user-info">
                                            <div class="prh-user-avatar prh-user-avatar--admin">
                                                @if (!string.IsNullOrEmpty(reset.ResetByUser?.Avatar))
                                                {
                                                    <img src="@reset.ResetByUser.Avatar" alt="@reset.ResetByUser?.FullName"
                                                         onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                                    <span style="display:none;">@(reset.ResetByUser?.FullName?.Substring(0, 1) ?? "A")</span>
                                                }
                                                else
                                                {
                                                    <span>@(reset.ResetByUser?.FullName?.Substring(0, 1) ?? "A")</span>
                                                }
                                            </div>
                                            <div class="prh-user-details">
                                                <div class="prh-user-name">@(reset.ResetByUser?.FullName ?? "System")</div>
                                                <div class="prh-user-role">
                                                    <i class="fas fa-crown"></i>
                                                    Admin
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="prh-reason">
                                            <i class="fas fa-comment-dots"></i>
                                            <span>@(reset.ResetReason ?? "Không có lý do")</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="prh-ip-badge">
                                            <i class="fas fa-globe"></i>
                                            @(reset.Ipaddress ?? "N/A")
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="prh-empty-state">
                    <i class="fas fa-key"></i>
                    <h4>Không có dữ liệu</h4>
                    <p>Chưa có hoạt động reset mật khẩu nào được ghi nhận</p>
                </div>
            }
        </div>
    </div>
</div>