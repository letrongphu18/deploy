@{
    ViewData["Title"] = "Quên Mật Khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AIHUBOS System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
	<link href="~/css/fg-pass.css" rel="stylesheet" />
</head>
<body class="fp-page">
    <div class="fp-container">
        <div class="fp-card">
            <div class="fp-header">
                <div class="fp-header-icon">
                    <i class="fas fa-key"></i>
                </div>
                <h3 class="fp-header-title">Quên Mật Khẩu</h3>
                <p class="fp-header-subtitle">Nhập email để nhận mã OTP</p>
            </div>

            <div class="fp-body">
                <div class="fp-info-box">
                    <i class="fas fa-info-circle fp-info-icon"></i>
                    <p class="fp-info-text">
                        Chúng tôi sẽ gửi mã OTP (6 số) đến email của bạn.
                        Mã có hiệu lực trong 5 phút.
                    </p>
                </div>

                <form id="forgotPasswordForm">
                    <div class="fp-form-group">
                        <label for="email" class="fp-label">
                            <i class="fas fa-envelope fp-label-icon"></i>
                            Email
                        </label>
                        <input type="email"
                               class="fp-input"
                               id="email"
                               name="email"
                               placeholder="example@email.com"
                               required>
                    </div>

                    <button type="submit" class="fp-btn" id="btnSendOtp">
                        <i class="fas fa-paper-plane fp-btn-icon"></i>
                        <span class="fp-btn-text">Gửi Mã OTP</span>
                    </button>

                    <div class="fp-back-link-wrapper">
                        <a href="/Account/Login" class="fp-back-link">
                            <i class="fas fa-arrow-left fp-back-icon"></i>
                            Quay lại đăng nhập
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.getElementById('forgotPasswordForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const email = document.getElementById('email').value;
            const btn = document.getElementById('btnSendOtp');
            const originalHTML = btn.innerHTML;

            // Disable button
            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fp-spinner fp-btn-icon"></i><span class="fp-btn-text">Đang gửi...</span>';

            try {
                const response = await fetch('/Account/SendOtpJson', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ email: email })
                });

                const result = await response.json();

                if (result.success) {
                    await Swal.fire({
                        icon: 'success',
                        title: 'Thành công!',
                        text: result.message,
                        timer: 2000,
                        showConfirmButton: false
                    });

                    // Redirect to OTP verification page
                    window.location.href = `/Account/VerifyOtp?email=${encodeURIComponent(email)}`;
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi!',
                        text: result.message
                    });

                    btn.disabled = false;
                    btn.innerHTML = originalHTML;
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi!',
                    text: 'Có lỗi xảy ra. Vui lòng thử lại'
                });

                btn.disabled = false;
                btn.innerHTML = originalHTML;
            }
        });
    </script>
</body>
</html>