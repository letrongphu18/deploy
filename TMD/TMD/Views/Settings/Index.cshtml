@section Scripts {

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    // ========== GLOBAL STATE ==========
    let modifiedSettings = new Set(); // Theo dõi settings đã chỉnh sửa
    let currentLayoutType = null;

    // ========== INIT ON LOAD ==========
    document.addEventListener('DOMContentLoaded', function() {
        console.log('✅ Settings page initialized');
        
        // Setup input listeners
        setupInputListeners();
        
        // Setup search
        setupSearch();
        
        // Load trash count
        updateTrashCount();
        
        // Setup apply method radio listener
        document.querySelectorAll('input[name="applyMethod"]').forEach(radio => {
            radio.addEventListener('change', function() {
                const conditionalGroup = document.getElementById('conditionalDescGroup');
                if (this.value === 'CONDITIONAL') {
                    conditionalGroup.style.display = 'block';
                } else {
                    conditionalGroup.style.display = 'none';
                }
            });
        });

        // Setup category change listener
        document.getElementById('createCategory').addEventListener('change', function() {
            document.getElementById('createCategoryHidden').value = this.value;
            // Ẩn/hiển thị apply method group dựa trên category
            const applyMethodGroup = document.getElementById('applyMethodGroup');
            if (this.value === 'Salary') {
                applyMethodGroup.style.display = 'block';
            } else {
                applyMethodGroup.style.display = 'none';
            }
        });
    });

    // ========== INPUT LISTENER SETUP ==========
    function setupInputListeners() {
        document.querySelectorAll('.setting-input').forEach(input => {
            input.addEventListener('change', function() {
                const key = this.dataset.key;
                modifiedSettings.add(key);
                updateSaveAllButton();
            });

            input.addEventListener('input', function() {
                const key = this.dataset.key;
                modifiedSettings.add(key);
                updateSaveAllButton();
            });
        });
    }

    // ========== UPDATE SAVE ALL BUTTON ==========
    function updateSaveAllButton() {
        const btnSaveAll = document.getElementById('btnSaveAll');
        const modifiedCount = document.getElementById('modifiedCount');
        const saveIndicator = document.getElementById('saveIndicator');

        const count = modifiedSettings.size;
        modifiedCount.textContent = count;

        if (count > 0) {
            btnSaveAll.classList.remove('disabled');
            btnSaveAll.disabled = false;
            saveIndicator.style.display = 'flex';
        } else {
            btnSaveAll.classList.add('disabled');
            btnSaveAll.disabled = true;
            saveIndicator.style.display = 'none';
        }
    }

    // ========== SEARCH FUNCTIONALITY ==========
    function setupSearch() {
        const searchSalary = document.getElementById('searchSalary');
        const searchAttendance = document.getElementById('searchAttendance');

        if (searchSalary) {
            searchSalary.addEventListener('input', function() {
                filterSettings('salarySettingsList', this.value);
            });
        }

        if (searchAttendance) {
            searchAttendance.addEventListener('input', function() {
                filterSettings('attendanceSettingsList', this.value);
            });
        }
    }

    function filterSettings(containerId, keyword) {
        const container = document.getElementById(containerId);
        const cards = container.querySelectorAll('.setting-card');

        cards.forEach(card => {
            const text = card.textContent.toLowerCase();
            const key = card.dataset.key.toLowerCase();
            
            if (text.includes(keyword.toLowerCase()) || key.includes(keyword.toLowerCase())) {
                card.style.display = 'block';
            } else {
                card.style.display = 'none';
            }
        });
    }

    // ========== SAVE ALL SETTINGS ==========
    async function saveAllSettings() {
        if (modifiedSettings.size === 0) {
            Swal.fire('Lưu ý', 'Không có cấu hình nào được thay đổi', 'info');
            return;
        }

        // Thu thập dữ liệu cần lưu
        const requests = [];
        modifiedSettings.forEach(key => {
            const input = document.querySelector(`[data-key="${key}"]`);
            if (input) {
                requests.push({
                    settingKey: key,
                    settingValue: input.value
                });
            }
        });

        if (requests.length === 0) return;

        Swal.fire({ title: 'Đang lưu...', didOpen: () => Swal.showLoading(), allowOutsideClick: false });

        try {
            const response = await fetch('/Settings/BatchUpdateSettings', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(requests)
            });

            const data = await response.json();

            if (data.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Thành công!',
                    text: data.message,
                    confirmButtonText: 'OK'
                });

                modifiedSettings.clear();
                updateSaveAllButton();
            } else {
                Swal.fire('Lỗi', data.message, 'error');
            }
        } catch (err) {
            Swal.fire('Lỗi kết nối', err.message, 'error');
            console.error(err);
        }
    }

    // ========== AUTO GENERATE KEY ==========
    function autoGenerateKey() {
        const description = document.getElementById('createDescription').value;
        const applyMethod = document.querySelector('input[name="applyMethod"]:checked')?.value || '';

        if (!description) {
            document.getElementById('createKey').value = '';
            return;
        }

        // Gửi request tới backend để generate key
        fetch('/Settings/GenerateKey', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                description: description,
                applyMethod: applyMethod
            })
        })
        .then(r => r.json())
        .then(data => {
            if (data.success) {
                document.getElementById('createKey').value = data.key;
                const keyStatus = document.getElementById('keyStatus');
                if (data.exists) {
                    keyStatus.innerHTML = '<i class="fas fa-exclamation-circle" style="color: var(--warning);"></i> Key đã tồn tại, tự động đổi tên';
                } else {
                    keyStatus.innerHTML = '<i class="fas fa-check-circle" style="color: var(--success);"></i> Key này có sẵn';
                }
            }
        })
        .catch(err => console.error(err));
    }

    // ========== OPEN MODALS ==========
    function openCreateModal(category = 'Salary') {
        document.getElementById('createForm').reset();
        document.getElementById('createCategoryHidden').value = category;
        document.getElementById('createCategory').value = category;
        document.getElementById('createKey').value = '';
        
        // Hiển thị apply method nếu là Salary
        const applyMethodGroup = document.getElementById('applyMethodGroup');
        if (category === 'Salary') {
            applyMethodGroup.style.display = 'block';
        } else {
            applyMethodGroup.style.display = 'none';
        }

        const modal = new bootstrap.Modal(document.getElementById('createModal'));
        modal.show();
    }

    function openEditModal(id, key, value, description, dataType, category, applyMethod) {
        document.getElementById('editId').value = id;
        document.getElementById('editKey').value = key;
        document.getElementById('editValue').value = value;
        document.getElementById('editDescription').value = description;
        document.getElementById('editDataType').value = dataType;
        document.getElementById('editCategory').value = category;
        document.getElementById('editApplyMethod').value = applyMethod || '';

        const modal = new bootstrap.Modal(document.getElementById('editModal'));
        modal.show();
    }

    async function openTrashModal() {
        const modal = new bootstrap.Modal(document.getElementById('trashModal'));
        modal.show();

        // Load trash list
        try {
            const response = await fetch('/Settings/GetTrashList');
            const data = await response.json();

            if (data.success) {
                const tbody = document.getElementById('trashTableBody');
                tbody.innerHTML = '';

                if (data.data.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="5" class="text-center text-muted py-4">Thùng rác trống</td></tr>';
                } else {
                    data.data.forEach(item => {
                        tbody.innerHTML += `
                            <tr>
                                <td><code>${item.settingKey}</code></td>
                                <td>${item.description}</td>
                                <td>${item.settingValue}</td>
                                <td>${item.category}</td>
                                <td>
                                    <button class="btn btn-sm btn-info" onclick="restoreSetting(${item.settingId})">
                                        <i class="fas fa-undo"></i> Khôi phục
                                    </button>
                                    <button class="btn btn-sm btn-danger" onclick="permanentDelete(${item.settingId})">
                                        <i class="fas fa-trash"></i> Xóa vĩnh viễn
                                    </button>
                                </td>
                            </tr>
                        `;
                    });
                }
            }
        } catch (err) {
            console.error(err);
        }
    }

    async function openBackupModal() {
        const modal = new bootstrap.Modal(document.getElementById('backupModal'));
        modal.show();

        // Load backup files
        try {
            const response = await fetch('/Settings/GetBackupFiles');
            const data = await response.json();

            if (data.success) {
                const tbody = document.getElementById('backupTableBody');
                tbody.innerHTML = '';

                if (data.backups.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="4" class="text-center text-muted py-4">Không có backup nào</td></tr>';
                } else {
                    data.backups.forEach(file => {
                        tbody.innerHTML += `
                            <tr>
                                <td>${file.fileName}</td>
                                <td>${(file.size / 1024).toFixed(2)} KB</td>
                                <td>${file.created}</td>
                                <td>
                                    <button class="btn btn-sm btn-info" onclick="restoreFromBackup('${file.fileName}')">
                                        <i class="fas fa-history"></i> Restore
                                    </button>
                                    <button class="btn btn-sm btn-danger" onclick="deleteBackup('${file.fileName}')">
                                        <i class="fas fa-trash"></i> Xóa
                                    </button>
                                </td>
                            </tr>
                        `;
                    });
                }
            }
        } catch (err) {
            console.error(err);
        }
    }

    // ========== CREATE SETTING ==========
    async function createSetting() {
        const key = document.getElementById('createKey').value;
        const value = document.getElementById('createValue').value;
        const description = document.getElementById('createDescription').value;
        const dataType = document.getElementById('createDataType').value;
        const category = document.getElementById('createCategory').value;
        const applyMethod = document.querySelector('input[name="applyMethod"]:checked')?.value || '';

        if (!key || !value || !description) {
            Swal.fire('Lỗi', 'Vui lòng điền đầy đủ thông tin', 'error');
            return;
        }

        try {
            const response = await fetch('/Settings/CreateSetting', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    settingKey: key,
                    settingValue: value,
                    description: description,
                    dataType: dataType,
                    category: category,
                    applyMethod: applyMethod
                })
            });

            const data = await response.json();

            if (data.success) {
                Swal.fire('Thành công', data.message, 'success').then(() => {
                    location.reload();
                });
            } else {
                Swal.fire('Lỗi', data.message, 'error');
            }
        } catch (err) {
            Swal.fire('Lỗi kết nối', err.message, 'error');
        }
    }

    // ========== EDIT SETTING ==========
    async function editSetting() {
        const id = document.getElementById('editId').value;
        const key = document.getElementById('editKey').value;
        const value = document.getElementById('editValue').value;
        const description = document.getElementById('editDescription').value;
        const dataType = document.getElementById('editDataType').value;
        const category = document.getElementById('editCategory').value;
        const applyMethod = document.getElementById('editApplyMethod').value;

        try {
            const response = await fetch('/Settings/EditSetting', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    settingId: parseInt(id),
                    settingKey: key,
                    settingValue: value,
                    description: description,
                    dataType: dataType,
                    category: category,
                    applyMethod: applyMethod
                })
            });

            const data = await response.json();

            if (data.success) {
                Swal.fire('Thành công', data.message, 'success').then(() => {
                    location.reload();
                });
            } else {
                Swal.fire('Lỗi', data.message, 'error');
            }
        } catch (err) {
            Swal.fire('Lỗi kết nối', err.message, 'error');
        }
    }

    // ========== TOGGLE SETTING STATUS ==========
    async function toggleSettingStatus(id, key) {
        try {
            const response = await fetch('/Settings/ToggleSettingStatus', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ settingId: id })
            });

            const data = await response.json();

            if (data.success) {
                Swal.fire('Thành công', data.message, 'success').then(() => {
                    location.reload();
                });
            } else {
                Swal.fire('Lỗi', data.message, 'error');
            }
        } catch (err) {
            Swal.fire('Lỗi kết nối', err.message, 'error');
        }
    }

    // ========== MOVE TO TRASH ==========
    async function moveToTrash(id) {
        const result = await Swal.fire({
            title: 'Xác nhận',
            text: 'Bạn chắc chắn muốn chuyển cấu hình này vào thùng rác?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545',
            confirmButtonText: 'Xóa'
        });

        if (!result.isConfirmed) return;

        try {
            const response = await fetch('/Settings/MoveToTrash?id=' + id, {
                method: 'POST'
            });

            const data = await response.json();

            if (data.success) {
                Swal.fire('Thành công', data.message, 'success').then(() => {
                    location.reload();
                });
            } else {
                Swal.fire('Lỗi', data.message, 'error');
            }
        } catch (err) {
            Swal.fire('Lỗi kết nối', err.message, 'error');
        }
    }

    // ========== RESTORE SETTING ==========
    async function restoreSetting(id) {
        try {
            const response = await fetch('/Settings/RestoreSetting?id=' + id, {
                method: 'POST'
            });

            const data = await response.json();

            if (data.success) {
                Swal.fire('Thành công', data.message, 'success').then(() => {
                    location.reload();
                });
            } else {
                Swal.fire('Lỗi', data.message, 'error');
            }
        } catch (err) {
            Swal.fire('Lỗi kết nối', err.message, 'error');
        }
    }

    // ========== PERMANENT DELETE ==========
    async function permanentDelete(id) {
        const result = await Swal.fire({
            title: 'Cảnh báo!',
            text: 'Xóa vĩnh viễn không thể hoàn tác!',
            icon: 'error',
            showCancelButton: true,
            confirmButtonColor: '#dc3545',
            confirmButtonText: 'Xóa'
        });

        if (!result.isConfirmed) return;

        try {
            const response = await fetch('/Settings/PermanentDelete?id=' + id, {
                method: 'POST'
            });

            const data = await response.json();

            if (data.success) {
                Swal.fire('Thành công', data.message, 'success').then(() => {
                    location.reload();
                });
            } else {
                Swal.fire('Lỗi', data.message, 'error');
            }
        } catch (err) {
            Swal.fire('Lỗi kết nối', err.message, 'error');
        }
    }

    // ========== UPDATE TRASH COUNT ==========
    async function updateTrashCount() {
        try {
            const response = await fetch('/Settings/GetTrashList');
            const data = await response.json();

            if (data.success && data.data) {
                document.getElementById('trashCount').textContent = data.data.length;
            }
        } catch (err) {
            console.error(err);
        }
    }

    // ========== LAYOUT EDITOR ==========
    async function loadLayout(layoutType) {
        currentLayoutType = layoutType;

        try {
            const response = await fetch(`/Settings/GetLayoutContent?layoutType=${layoutType}`);
            const data = await response.json();

            if (data.success) {
                document.getElementById('layoutEditor').value = data.content;
                document.getElementById('currentLayoutName').textContent = data.fileName;
                document.getElementById('fileName').textContent = data.fileName;
                document.getElementById('lastModified').textContent = data.lastModified;
                document.getElementById('layoutInfo').style.display = 'block';
            } else {
                Swal.fire('Lỗi', data.message, 'error');
            }
        } catch (err) {
            Swal.fire('Lỗi kết nối', err.message, 'error');
        }
    }

    async function saveLayout() {
        if (!currentLayoutType) {
            Swal.fire('Lỗi', 'Vui lòng load layout trước khi lưu', 'error');
            return;
        }

        const content = document.getElementById('layoutEditor').value;

        Swal.fire({ title: 'Đang lưu...', didOpen: () => Swal.showLoading(), allowOutsideClick: false });

        try {
            const response = await fetch('/Settings/SaveLayoutFile', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    layoutType: currentLayoutType,
                    content: content
                })
            });

            const data = await response.json();

            if (data.success) {
                Swal.fire('Thành công', data.message, 'success');
            } else {
                Swal.fire('Lỗi', data.message, 'error');
            }
        } catch (err) {
            Swal.fire('Lỗi kết nối', err.message, 'error');
        }
    }

    async function restoreFromBackup(fileName) {
        const result = await Swal.fire({
            title: 'Xác nhận',
            text: `Restore từ ${fileName}?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Restore'
        });

        if (!result.isConfirmed) return;

        try {
            const response = await fetch('/Settings/RestoreFromBackup', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ backupFileName: fileName })
            });

            const data = await response.json();

            if (data.success) {
                Swal.fire('Thành công', data.message, 'success').then(() => {
                    location.reload();
                });
            } else {
                Swal.fire('Lỗi', data.message, 'error');
            }
        } catch (err) {
            Swal.fire('Lỗi kết nối', err.message, 'error');
        }
    }

    async function deleteBackup(fileName) {
        const result = await Swal.fire({
            title: 'Xóa backup',
            text: 'Bạn chắc chắn?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545',
            confirmButtonText: 'Xóa'
        });

        if (!result.isConfirmed) return;

        try {
            const response = await fetch('/Settings/DeleteBackup', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ backupFileName: fileName })
            });

            const data = await response.json();

            if (data.success) {
                Swal.fire('Thành công', data.message, 'success').then(() => {
                    openBackupModal(); // Reload backup list
                });
            } else {
                Swal.fire('Lỗi', data.message, 'error');
            }
        } catch (err) {
            Swal.fire('Lỗi kết nối', err.message, 'error');
        }
    }

    // ========== SAVE ALL BUTTON EVENT ==========
    document.addEventListener('DOMContentLoaded', function() {
        const btnSaveAll = document.getElementById('btnSaveAll');
        if (btnSaveAll) {
            btnSaveAll.addEventListener('click', saveAllSettings);
        }
    });

</script>
}