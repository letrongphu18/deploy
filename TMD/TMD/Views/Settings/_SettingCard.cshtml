@model TMD.Models.SystemSetting

<div class="card setting-card h-100">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
                <h5 class="card-title mb-1">
                    @Model.SettingKey
                </h5>
                <p class="text-muted small mb-0">
                    <i class="fas fa-info-circle"></i> @Model.Description
                </p>
            </div>
            <span class="category-badge badge-@Model.Category.ToLower()">
                @Model.Category
            </span>
        </div>

        <div class="mb-3">
            @if (Model.DataType == "Code")
            {
                <!-- Code Editor: Monaco Editor -->
                <div class="monaco-editor-wrapper">
                    <div id="editor-@Model.SettingKey"
                         class="monaco-editor-container"
                         style="height: 400px; border: 1px solid #dee2e6; border-radius: 4px;">
                    </div>
                    <input type="hidden"
                           class="setting-input monaco-input"
                           data-key="@Model.SettingKey"
                           data-original="@Model.SettingValue"
                           value="@Model.SettingValue"
                           id="input-@Model.SettingKey" />
                </div>
            }
            else if (Model.DataType == "Boolean")
            {
                <!-- Boolean: Dropdown Yes/No -->
                <select class="form-select setting-select"
                        data-key="@Model.SettingKey"
                        data-original="@Model.SettingValue">
                    @if (Model.SettingValue?.ToLower() == "true")
                    {
                        <option value="true" selected>Có (True)</option>
                        <option value="false">Không (False)</option>
                    }
                    else
                    {
                        <option value="true">Có (True)</option>
                        <option value="false" selected>Không (False)</option>
                    }
                </select>
            }
            else if (Model.DataType == "Number")
            {
                <!-- Number: Input type number -->
                <input type="number"
                       class="form-control setting-input"
                       data-key="@Model.SettingKey"
                       data-original="@Model.SettingValue"
                       value="@Model.SettingValue"
                       min="0"
                       step="1" />
            }
            else if (Model.DataType == "Decimal")
            {
                <!-- Decimal: Input type number with decimals -->
                <input type="number"
                       class="form-control setting-input"
                       data-key="@Model.SettingKey"
                       data-original="@Model.SettingValue"
                       value="@Model.SettingValue"
                       min="0"
                       step="0.01" />
            }
            else if (Model.SettingKey.Contains("TIME"))
            {
                <!-- Time: Input type time -->
                <input type="time"
                       class="form-control setting-input"
                       data-key="@Model.SettingKey"
                       data-original="@Model.SettingValue"
                       value="@Model.SettingValue" />
            }
            else
            {
                <!-- String: Input type text -->
                <input type="text"
                       class="form-control setting-input"
                       data-key="@Model.SettingKey"
                       data-original="@Model.SettingValue"
                       value="@Model.SettingValue"
                       placeholder="Nhập giá trị..." />
            }
        </div>

        <div class="d-flex justify-content-between align-items-center">
            <small class="text-muted">
                <i class="fas fa-tag"></i> Type: <strong>@Model.DataType</strong>
            </small>
            @if (Model.UpdatedAt.HasValue)
            {
                <small class="text-muted">
                    <i class="fas fa-clock"></i> @Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")
                </small>
            }
        </div>
    </div>
</div>