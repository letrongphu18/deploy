@model List<AIHUBOS.Models.UserTask>
@{
    ViewData["Title"] = "Công việc của tôi";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}

<style>
    :root {
        --primary: #1a1f4a;
        --secondary: #6366f1;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        --info: #3b82f6;
        --light: #f8fafc;
        --dark: #0f172a;
        --border: #e2e8f0;
        --shadow: rgba(15, 23, 42, 0.08);
        --text: #334155;
        --text-muted: #64748b;
    }

    body.staff-dark-mode {
        --light: #1e293b;
        --dark: #0f172a;
        --border: #334155;
        --shadow: rgba(0, 0, 0, 0.3);
        --text: #e2e8f0;
        --text-muted: #94a3b8;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .task-page {
        padding: 2rem;
        background: var(--light);
        min-height: calc(100vh - 70px);
    }

    /* ========== HEADER ========== */
    .task-header {
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        border-radius: 1.5rem;
        padding: 2.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 8px 24px var(--shadow);
        position: relative;
        overflow: hidden;
    }

        .task-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(99, 102, 241, 0.3) 0%, transparent 70%);
            animation: float 6s ease-in-out infinite;
        }

    keyframes float {
        0%, 100%

    {
        transform: translateY(0) rotate(0deg);
    }

    50% {
        transform: translateY(-20px) rotate(5px);
    }

    }

    .task-header-content {
        position: relative;
        z-index: 1;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1.5rem;
    }

    .task-header-left h1 {
        color: white;
        font-size: 2rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .task-header-left p {
        color: rgba(255, 255, 255, 0.8);
        font-size: 1rem;
    }

    .task-stats {
        display: flex;
        gap: 1.5rem;
    }

    .task-stat-item {
        text-align: center;
        padding: 1rem 1.5rem;
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.2);
        min-width: 100px;
    }

        .task-stat-item .number {
            font-size: 2rem;
            font-weight: 800;
            color: white;
            margin-bottom: 0.25rem;
        }

        .task-stat-item .label {
            font-size: 0.75rem;
            color: rgba(255, 255, 255, 0.7);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-weight: 600;
        }

    /* ========== FILTERS ========== */
    .task-filters {
        background: white;
        border-radius: 1rem;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 2px 12px var(--shadow);
    }

    body.staff-dark-mode .task-filters {
        background: var(--light);
    }

    .filter-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }

    .filter-group label {
        display: block;
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--text);
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .filter-group select,
    .filter-group input {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 2px solid var(--border);
        border-radius: 0.75rem;
        font-size: 0.875rem;
        background: white;
        color: var(--text);
        transition: all 0.3s ease;
        font-family: inherit;
    }

    body.staff-dark-mode .filter-group select,
    body.staff-dark-mode .filter-group input {
        background: var(--dark);
        color: var(--text);
    }

    .filter-group select:focus,
    .filter-group input:focus {
        outline: none;
        border-color: var(--secondary);
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
    }

    /* ========== TASK LIST ========== */
    .task-list-container {
        background: white;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 2px 12px var(--shadow);
    }

    body.staff-dark-mode .task-list-container {
        background: var(--light);
    }

    .task-list-item {
        display: flex;
        align-items: center;
        gap: 1.25rem;
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid var(--border);
        transition: all 0.3s ease;
        position: relative;
        cursor: pointer;
    }

        .task-list-item::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            width: 4px;
            height: 100%;
            background: var(--secondary);
            transform: scaleY(0);
            transition: transform 0.3s ease;
        }

        .task-list-item:hover {
            background: rgba(99, 102, 241, 0.05);
        }

            .task-list-item:hover::before {
                transform: scaleY(1);
            }

        .task-list-item:last-child {
            border-bottom: none;
        }

    .task-priority-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 0.75rem;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        white-space: nowrap;
    }

    .priority-high {
        background: rgba(239, 68, 68, 0.1);
        color: var(--danger);
    }

    .priority-medium {
        background: rgba(245, 158, 11, 0.1);
        color: var(--warning);
    }

    .priority-low {
        background: rgba(16, 185, 129, 0.1);
        color: var(--success);
    }

    .task-list-content {
        flex: 1;
        min-width: 0;
    }

    .task-list-title {
        font-size: 1rem;
        font-weight: 700;
        color: var(--text);
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .overdue-badge {
        background: var(--danger);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 0.5rem;
        font-size: 0.625rem;
        font-weight: 700;
        animation: pulse 2s ease-in-out infinite;
        white-space: nowrap;
    }

    keyframes pulse {
        0%, 100%

    {
        opacity: 1;
    }

    50% {
        opacity: 0.7;
    }

    }

    .task-list-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
        font-size: 0.875rem;
        color: var(--text-muted);
    }

        .task-list-meta span {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

    .task-status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.625rem 1rem;
        border-radius: 0.75rem;
        font-size: 0.875rem;
        font-weight: 600;
        white-space: nowrap;
    }

    .status-todo {
        background: rgba(107, 114, 128, 0.1);
        color: #6b7280;
    }

    .status-inprogress {
        background: rgba(245, 158, 11, 0.1);
        color: var(--warning);
    }

    .status-testing {
        background: rgba(59, 130, 246, 0.1);
        color: var(--info);
    }

    .status-done {
        background: rgba(16, 185, 129, 0.1);
        color: var(--success);
    }

    .status-reopen {
        background: rgba(239, 68, 68, 0.1);
        color: var(--danger);
    }

    /* ========== BUTTONS ========== */
    .task-list-actions {
        display: flex;
        gap: 0.5rem;
    }

    .task-action-btn {
        width: 2.5rem;
        height: 2.5rem;
        border: none;
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 0.875rem;
    }

    .task-action-btn-primary {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
    }

        .task-action-btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
        }

    .task-action-btn-secondary {
        background: var(--light);
        color: var(--text);
        border: 2px solid var(--border);
    }

        .task-action-btn-secondary:hover {
            border-color: var(--secondary);
            background: rgba(99, 102, 241, 0.05);
        }

    /* ========== MODAL ========== */
    .modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 9999;
        align-items: center;
        justify-content: center;
        backdrop-filter: blur(4px);
    }

        .modal-overlay.show {
            display: flex;
        }

    .modal-dialog {
        background: white;
        border-radius: 1.5rem;
        box-shadow: 0 20px 60px var(--shadow);
        width: 90%;
        max-width: 600px;
        max-height: 90vh;
        overflow-y: auto;
    }

    body.staff-dark-mode .modal-dialog {
        background: var(--light);
    }

    .modal-header {
        padding: 1.5rem 2rem;
        border-bottom: 1px solid var(--border);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .modal-header h5 {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--text);
            margin: 0;
        }

    .modal-close {
        width: 2.25rem;
        height: 2.25rem;
        border: none;
        background: var(--light);
        border-radius: 0.5rem;
        cursor: pointer;
        color: var(--text-muted);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1rem;
        transition: all 0.2s ease;
    }

        .modal-close:hover {
            background: var(--danger);
            color: white;
        }

    .modal-body {
        padding: 2rem;
        color: var(--text);
    }

    .modal-footer {
        padding: 1.5rem 2rem;
        border-top: 1px solid var(--border);
        display: flex;
        justify-content: flex-end;
        gap: 0.75rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        font-weight: 600;
        color: var(--text);
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .form-text {
        font-size: 0.75rem;
        color: var(--text-muted);
        margin-top: 0.25rem;
        display: block;
    }

    .required {
        color: var(--danger);
    }

    /* Empty State */
    .empty-state {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 4rem 2rem;
        border-radius: 1rem;
        background: white;
        box-shadow: 0 2px 12px var(--shadow);
        margin-top: 1.5rem;
    }

    body.staff-dark-mode .empty-state {
        background: var(--light);
    }

    .empty-state i {
        font-size: 5rem;
        color: var(--secondary);
        opacity: 0.5;
        margin-bottom: 1.5rem;
    }

    .empty-state h3 {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text);
        margin-bottom: 0.75rem;
    }

    .empty-state p {
        font-size: 1rem;
        color: var(--text-muted);
    }

    /* ========== RESPONSIVE ========== */
    @@media (max-width: 768px) {
        .task-page {
            padding: 1rem;
        }

        .task-header {
            padding: 1.5rem;
        }

        .task-header-content {
            flex-direction: column;
            align-items: flex-start;
        }

        .task-stats {
            width: 100%;
            justify-content: space-between;
        }

        .task-stat-item {
            padding: 0.75rem 1rem;
            min-width: auto;
        }

        .task-list-item {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.75rem;
            padding: 1rem;
        }

        .task-list-actions {
            width: 100%;
            justify-content: flex-end;
        }

        .filter-row {
            grid-template-columns: 1fr;
        }
    }

    /* Fix z-index cho select dropdown trong modal */
    .modal-overlay {
        z-index: 9998 !important;
    }

    .modal-dialog {
        z-index: 9999 !important;
        position: relative;
    }

    .modal-body {
        z-index: 10000 !important;
        position: relative;
    }

    .form-control, .form-control select, select.form-control {
        position: relative;
        z-index: 10001 !important;
    }
</style>

<div class="task-page">
    <div class="container-fluid">
        <div class="task-header">
            <div class="task-header-content">
                <div class="task-header-left">
                    <h1><i class="fas fa-tasks"></i> Công việc của tôi</h1>
                    <p>Quản lý các công việc đã được giao và cập nhật tiến độ.</p>
                </div>
                <div class="task-stats">
                    <div class="task-stat-item">
                        <div class="number text-success" id="statDone">0</div>
                        <div class="label">Hoàn thành</div>
                    </div>
                    <div class="task-stat-item">
                        <div class="number text-warning" id="statInProgress">0</div>
                        <div class="label">Đang làm</div>
                    </div>
                    <div class="task-stat-item">
                        <div class="number text-danger" id="statTotal">0</div>
                        <div class="label">Tổng cộng</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="task-filters">
            <div class="filter-row">
                <div class="filter-group">
                    <label><i class="fas fa-list"></i> Trạng thái</label>
                    <select id="filterStatus" onchange="filterTasks()">
                        <option value="">Tất cả</option>
                        <option value="TODO">Chưa bắt đầu</option>
                        <option value="InProgress">Đang làm</option>
                        <option value="Testing">Chờ test</option>
                        <option value="Done">Hoàn thành</option>
                        <option value="Reopen">Cần sửa lại</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label><i class="fas fa-flag"></i> Mức độ ưu tiên</label>
                    <select id="filterPriority" onchange="filterTasks()">
                        <option value="">Tất cả</option>
                        <option value="High">Cao</option>
                        <option value="Medium">Trung bình</option>
                        <option value="Low">Thấp</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label><i class="fas fa-search"></i> Tìm kiếm</label>
                    <input type="text" id="searchTask" placeholder="Tìm tên công việc..." oninput="filterTasks()">
                </div>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="empty-state" id="emptyStateInitial">
                <i class="fas fa-inbox"></i>
                <h3>Chưa có công việc nào</h3>
                <p>Bạn chưa được giao công việc nào. Hãy liên hệ quản lý để được phân công.</p>
            </div>
        }
        else
        {
            <div class="task-list-container" id="taskListContainer">
                @foreach (var userTask in Model)
                {
                    var task = userTask.Task;
                    var priorityClass = (task.Priority ?? "Medium").ToLower();
                    var statusClass = (userTask.Status ?? "TODO").ToLower();
                    var statusText = userTask.Status switch
                    {
                        "TODO" => "Chưa bắt đầu",
                        "InProgress" => "Đang làm",
                        "Testing" => "Chờ test",
                        "Done" => "Hoàn thành",
                        "Reopen" => "Cần sửa lại",
                        _ => "Chưa bắt đầu"
                    };
                    var statusIcon = userTask.Status switch
                    {
                        "TODO" => "inbox",
                        "InProgress" => "spinner fa-spin",
                        "Testing" => "vial",
                        "Done" => "check-circle",
                        "Reopen" => "redo",
                        _ => "inbox"
                    };

                    // FIX: Sử dụng task.CreatedAt (Ngày tạo) thay cho AssignedDate.
                    var taskAssignedDate = task.CreatedAt;

                    // FIX: Sử dụng navigation property userTask.Tester?.FullName thay cho userTask.TesterName.
                    var testerName = userTask.Tester?.FullName;

                    // FIX TẠM THỜI: Vô hiệu hóa isCompletedLate để biên dịch, vì cần Task.CompletedAt/UserTask.CompletedAt.
                    var isCompletedLate = false;

                    var isOverdue = task.Deadline.HasValue && DateTime.Now > task.Deadline.Value && userTask.Status != "Done";

                    <div class="task-list-item"
                         data-user-task-id="@userTask.UserTaskId"
                         data-status="@userTask.Status"
                         data-priority="@(task.Priority ?? "Medium")"
                         data-taskname="@task.TaskName">

                        <div class="task-list-priority">
                            <div class="task-priority-badge priority-@priorityClass">
                                <i class="fas fa-flag"></i> @(task.Priority ?? "Medium")
                            </div>
                        </div>

                        <div class="task-list-content">
                            <div class="task-list-title">
                                <strong>@task.TaskName</strong>
                                @if (isOverdue)
                                {
                                    <span class="overdue-badge">
                                        <i class="fas fa-exclamation-triangle"></i> QUÁ HẠN
                                    </span>
                                }
                                @if (isCompletedLate)
                                {
                                    <span class="overdue-badge" style="background: var(--warning);">
                                        <i class="fas fa-clock"></i> HOÀN THÀNH MUỘN
                                    </span>
                                }
                            </div>
                            <div class="task-list-meta">
                                <span>
                                    <i class="fas fa-calendar-alt"></i> Ngày giao: @taskAssignedDate?.ToString("dd/MM/yyyy")
                                </span>
                                @if (task.Deadline.HasValue)
                                {
                                    <span>
                                        <i class="fas fa-hourglass-half"></i> Hạn chót: @task.Deadline.Value.ToString("dd/MM/yyyy")
                                    </span>
                                }
                                @if (!string.IsNullOrEmpty(testerName))
                                {
                                    <span>
                                        <i class="fas fa-user-check"></i> Tester: @testerName
                                    </span>
                                }
                            </div>
                        </div>

                        <div class="task-status-badge status-@statusClass">
                            <i class="fas fa-@statusIcon"></i> <span>@statusText</span>
                        </div>

                        <div class="task-list-actions">
                            <button class="task-action-btn task-action-btn-secondary" onclick="viewTaskDetail(@userTask.UserTaskId)" title="Xem chi tiết">
                                <i class="fas fa-eye"></i>
                            </button>
                            @if (userTask.Status != "Done")
                            {
                                <button class="task-action-btn task-action-btn-primary" onclick="updateTaskProgress(@userTask.UserTaskId)" title="Cập nhật tiến độ">
                                    <i class="fas fa-pencil-alt"></i>
                                </button>
                            }
                        </div>
                    </div>
                }

                <div class="empty-state" id="emptyStateFilter" style="display:none;">
                    <i class="fas fa-search"></i>
                    <h3>Không tìm thấy công việc</h3>
                    <p>Hãy thử thay đổi tiêu chí tìm kiếm hoặc bộ lọc.</p>
                </div>
            </div>
        }
    </div>
</div>

<div class="modal-overlay" id="taskDetailModal">
    <div class="modal-dialog">
        <div class="modal-header">
            <h5 class="modal-title"><i class="fas fa-info-circle"></i> Chi Tiết Công Việc</h5>
            <button class="modal-close" onclick="closeModal('taskDetailModal')"><i class="fas fa-times"></i></button>
        </div>
        <div class="modal-body" id="taskDetailContent">
            <div class="text-center">
                <i class="fas fa-spinner fa-spin fa-2x"></i>
                <p class="mt-2">Đang tải...</p>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" onclick="closeModal('taskDetailModal')">Đóng</button>
        </div>
    </div>
</div>

<div class="modal-overlay" id="updateProgressModal">
    <div class="modal-dialog">
        <div class="modal-header">
            <h5 class="modal-title"><i class="fas fa-history"></i> Cập Nhật Tiến Độ</h5>
            <button class="modal-close" onclick="closeModal('updateProgressModal')"><i class="fas fa-times"></i></button>
        </div>
        <div class="modal-body">
            <input type="hidden" id="updateUserTaskId" />
            <input type="hidden" id="currentTaskStatus" />
            <div class="form-group">
                <label class="form-label">Trạng thái hiện tại</label>
                <input type="text" class="form-control" id="currentStatusDisplay" readonly />
            </div>
            <div class="form-group">
                <label class="form-label">Cập nhật thành <span class="required">*</span></label>
                <select class="form-control" id="updateStatus">
                    <option value="">-- Chọn trạng thái --</option>
                </select>
            </div>
            <div class="form-group" id="reportLinkGroup" style="display:none;">
                <label class="form-label">Link báo cáo</label>
                <input type="text" class="form-control" id="updateReportLink" placeholder="https://...">
                <small class="form-text">Tùy chọn - Link đến báo cáo hoặc tài liệu liên quan</small>
            </div>
            <div class="form-group" id="testerSelectGroup" style="display:none;">
                <label class="form-label">Chọn Tester <span class="required">*</span></label>
                <select class="form-control" id="selectTester">
                    <option value="">-- Chọn Tester --</option>
                </select>
                <small class="form-text">Bắt buộc khi gửi test</small>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" onclick="closeModal('updateProgressModal')">Đóng</button>
            <button class="btn btn-primary" onclick="submitUpdateProgress()">Cập nhật</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // ✅ BIẾN TOÀN CỤC
        let userPermissions = null;
        let allTesters = [];

        // ========== LOAD PERMISSIONS AT START ==========
        async function loadUserPermissions() {
            try {
                const response = await fetch('/Staff/GetUserPermissions');
                const data = await response.json();
                if (data.success) {
                    userPermissions = data.permissions;
                    console.log('👤 User Permissions:', userPermissions);
                    // ✅ NẾU LÀ DEV THÌ LOAD TESTERS LUÔN
                    if (userPermissions.canSendToTesting) {
                        await loadTesters();
                    }
                } else {
                    alert('Không thể tải thông tin quyền: ' + data.message);
                }
            } catch (error) {
                console.error('Error loading permissions:', error);
                alert('Lỗi khi tải thông tin quyền');
            }
        }

        // ========== STATS & FILTER INIT ==========
        function calculateStats() {
            const taskItems = document.querySelectorAll('.task-list-item');
            let doneCount = 0;
            let inProgressCount = 0;

            taskItems.forEach(item => {
                const status = (item.getAttribute('data-status') || '').toLowerCase();
                if (status === 'done') {
                    doneCount++;
                } else if (status === 'inprogress' || status === 'testing' || status === 'reopen') {
                    inProgressCount++;
                }
            });

            document.getElementById('statDone').textContent = doneCount;
            document.getElementById('statInProgress').textContent = inProgressCount;
            document.getElementById('statTotal').textContent = taskItems.length;
        }

        // ========== FILTER - ĐÃ SỬA LỖI LOGIC ==========
        function filterTasks() {
            const status = document.getElementById('filterStatus').value.toLowerCase();
            const priority = document.getElementById('filterPriority').value.toLowerCase();
            const searchTerm = document.getElementById('searchTask').value.toLowerCase().trim();

            const taskItems = document.querySelectorAll('.task-list-item');
            const emptyStateFilter = document.getElementById('emptyStateFilter');

            let visibleCount = 0;

            taskItems.forEach(item => {
                // Lấy giá trị từ data attribute. Dùng || '' để tránh null.
                const itemStatus = item.getAttribute('data-status').toLowerCase() || '';
                const itemPriority = item.getAttribute('data-priority').toLowerCase() || '';
                const itemName = item.getAttribute('data-taskname').toLowerCase() || '';

                // Kiểm tra điều kiện lọc
                const statusMatch = !status || itemStatus === status;
                const priorityMatch = !priority || itemPriority === priority;
                const searchMatch = !searchTerm || itemName.includes(searchTerm);

                if (statusMatch && priorityMatch && searchMatch) {
                    item.style.display = 'flex'; // Hiển thị task
                    visibleCount++;
                } else {
                    item.style.display = 'none'; // Ẩn task
                }
            });

            // Xử lý thông báo không tìm thấy (chỉ áp dụng khi ban đầu có task)
            if (emptyStateFilter) {
                if (visibleCount === 0) {
                    emptyStateFilter.style.display = 'flex'; // Hiện thông báo lọc
                } else {
                    emptyStateFilter.style.display = 'none'; // Ẩn thông báo lọc
                }
            }
        }

        // ========== MODAL ==========
        function showModal(id) {
            document.getElementById(id).classList.add('show');
        }

        function closeModal(id) {
            document.getElementById(id).classList.remove('show');
        }

