        // ========== LOAD TESTERS ==========
        async function loadTesters() {
            try {
                const response = await fetch('/Staff/GetAllTesters');
                const data = await response.json();
                if (data.success && data.testers) {
                    allTesters = data.testers;
                    const select = document.getElementById('selectTester');
                    select.innerHTML = '<option value="">-- Chọn Tester --</option>'; // Reset
                    data.testers.forEach(tester => {
                        const option = document.createElement('option');
                        option.value = tester.userId;
                        option.textContent = `${tester.fullName} (${tester.departmentName})`;
                        select.appendChild(option);
                    });
                }
            } catch (error) {
                console.error('Error loading testers:', error);
            }
        }

        // ========== UPDATE TASK PROGRESS - FIXED VERSION ==========
        async function updateTaskProgress(userTaskId) {
            if (!userPermissions) {
                Swal.fire('Lỗi', 'Vui lòng đợi hệ thống tải thông tin quyền...', 'warning');
                return;
            }

            try {
                // ✅ LẤY TRẠNG THÁI HIỆN TẠI TỪ DOM
                const currentTaskItem = document.querySelector(`.task-list-item[data-user-task-id="${userTaskId}"]`);
                let currentStatus = (currentTaskItem ? currentTaskItem.getAttribute('data-status') : 'TODO') || 'TODO';

                // Lấy Text hiển thị cho Current Status
                const currentStatusText = currentTaskItem.querySelector('.task-status-badge span').textContent;

                document.getElementById('updateUserTaskId').value = userTaskId;
                document.getElementById('currentTaskStatus').value = currentStatus;
                document.getElementById('currentStatusDisplay').value = currentStatusText;
                document.getElementById('updateReportLink').value = '';
                document.getElementById('reportLinkGroup').style.display = 'none';
                document.getElementById('testerSelectGroup').style.display = 'none';
                document.getElementById('selectTester').value = '';

                // ✅ POPULATE STATUS SELECT DỰA VÀO QUYỀN
                const statusSelect = document.getElementById('updateStatus');
                statusSelect.innerHTML = '<option value="">-- Chọn trạng thái --</option>';

                let options = [];

                // Logic cho Developer/Người có quyền chuyển sang Testing
                if (userPermissions.canSendToTesting) {
                    if (currentStatus === 'TODO') {
                        options = ['InProgress', 'Testing'];
                    } else if (currentStatus === 'InProgress' || currentStatus === 'Reopen') {
                        options = ['Testing'];
                    } else if (currentStatus === 'Testing') {
                        // Testing không được chuyển trạng thái tiếp (chờ Tester xử lý)
                        Swal.fire('Thông báo', 'Công việc đang ở trạng thái Chờ test. Vui lòng đợi Tester phản hồi.', 'info');
                        return;
                    }
                }

                // Logic cho Tester/Người có quyền hoàn thành (luôn có thể hoàn thành nếu là dev)
                if (userPermissions.canMarkDone || userPermissions.canSendToTesting) {
                    if (currentStatus === 'InProgress' || currentStatus === 'Reopen') {
                        // Thêm Done cho dev/staff
                        options.push('Done');
                    }
                }

                // Logic cho Tester/Người có quyền Reopen (khi đang Testing)
                if (currentStatus === 'Testing' && userPermissions.canReopen) {
                    options.push('Reopen');
                }

                // Loại bỏ các trạng thái trùng lặp và thêm vào select
                const uniqueOptions = [...new Set(options)];

                const statusMap = {
                    'InProgress': 'Đang làm',
                    'Testing': 'Chờ test',
                    'Done': 'Hoàn thành',
                    'Reopen': 'Cần sửa lại'
                };

                uniqueOptions.forEach(status => {
                    const option = document.createElement('option');
                    option.value = status;
                    option.textContent = statusMap[status] || status;
                    statusSelect.appendChild(option);
                });

                if (statusSelect.options.length <= 1) {
                    Swal.fire('Thông báo', 'Không có trạng thái nào hợp lệ để chuyển tiếp công việc này.', 'info');
                    return;
                }

                showModal('updateProgressModal');

            } catch (error) {
                console.error('Error in updateTaskProgress:', error);
                Swal.fire('Lỗi', 'Đã xảy ra lỗi khi chuẩn bị cập nhật tiến độ.', 'error');
            }
        }

        // ========== HANDLE STATUS CHANGE IN MODAL ==========
        document.getElementById('updateStatus').addEventListener('change', function() {
            const status = this.value;
            const reportLinkGroup = document.getElementById('reportLinkGroup');
            const testerSelectGroup = document.getElementById('testerSelectGroup');

            // Hiện/ẩn report link
            if (status === 'InProgress' || status === 'Done') { // Bỏ 'Testing' vì testing không bắt buộc link
                reportLinkGroup.style.display = 'block';
            } else {
                reportLinkGroup.style.display = 'none';
            }

            // Hiện/ẩn tester select
            if (userPermissions && userPermissions.canSendToTesting && status === 'Testing') {
                testerSelectGroup.style.display = 'block';
            } else {
                testerSelectGroup.style.display = 'none';
            }
        });

        // ========== SUBMIT UPDATE ==========
        async function submitUpdateProgress() {
            const userTaskId = document.getElementById('updateUserTaskId').value;
            const status = document.getElementById('updateStatus').value;
            const reportLink = document.getElementById('updateReportLink').value.trim();
            const selectTester = document.getElementById('selectTester').value;

            if (!status) {
                Swal.fire('Cảnh báo', 'Vui lòng chọn trạng thái mới.', 'warning');
                return;
            }

            if (status === 'Testing' && userPermissions.canSendToTesting && !selectTester) {
                 Swal.fire('Cảnh báo', 'Vui lòng chọn Tester khi chuyển sang trạng thái "Chờ test".', 'warning');
                 return;
            }

            // Cập nhật ReportLink cho trường hợp đang là InProgress hoặc Done
            if ((status === 'InProgress' || status === 'Done') && !reportLink) {
                 Swal.fire('Cảnh báo', 'Vui lòng cung cấp Link báo cáo/tài liệu liên quan.', 'warning');
                 return;
            }

            const requestData = {
                UserTaskId: userTaskId,
                Status: status,
                ReportLink: reportLink,
                TesterId: status === 'Testing' ? (selectTester || null) : null
            };

            Swal.fire({ title: 'Đang cập nhật...', text: 'Vui lòng đợi giây lát', allowOutsideClick: false, didOpen: () => Swal.showLoading() });

            try {
                const response = await fetch('/Staff/UpdateTaskProgress', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(requestData)
                });

                const data = await response.json();
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Cập nhật thành công!',
                        text: data.message
                    }).then(() => location.reload());
                } else {
                    Swal.fire('Lỗi', data.message, 'error');
                }

            } catch (err) {
                Swal.fire('Lỗi kết nối', err.message, 'error');
            }
        }

        // ========== CLOSE ON OUTSIDE CLICK - FIXED ==========
        function setupModalCloseBehavior() {
            // ✅ XỬ LÝ ĐÓNG MODAL KHI CLICK VÀO OVERLAY
            document.querySelectorAll('.modal-overlay').forEach(overlay => {
                overlay.addEventListener('mousedown', function(e) {
                    // Chỉ đóng khi click TRỰC TIẾP vào overlay (background đen mờ)
                    if (e.target === this) {
                        console.log('🚪 Closing modal by overlay click');
                        this.classList.remove('show');
                    }
                });
            });

            // ✅ NGĂN MODAL ĐÓNG KHI CLICK VÀO NỘI DUNG BÊN TRONG
            document.querySelectorAll('.modal-dialog').forEach(dialog => {
                dialog.addEventListener('mousedown', function(e) {
                    e.stopPropagation(); // Ngăn event bubble lên overlay
                });
            });

            console.log('✅ Modal close behavior setup complete');
        }

        // ========== INIT ==========\
        document.addEventListener('DOMContentLoaded', async function() {
            console.log('🚀 Initializing...');
            await loadUserPermissions();
            calculateStats(); // Tính toán và hiển thị thống kê
            console.log('✅ Initialization complete');

            // ✅ SETUP MODAL CLOSE BEHAVIOR - SAU KHI DOM LOADED
            setupModalCloseBehavior();
        });
    </script>
