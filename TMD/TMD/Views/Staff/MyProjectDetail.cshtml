@{
    ViewData["Title"] = $"Chi tiết dự án - {ViewBag.Project.ProjectName}";
    var project = ViewBag.Project;
    var myTasksWithMetadata = ViewBag.MyTasksWithMetadata as List<dynamic>;
    var activeMembers = ViewBag.ActiveMembers as List<dynamic>;
}

<link rel="stylesheet" href="~/css/project-management.css" />

<div class="pm-container">
    <!-- DETAIL HEADER -->
    <div class="pm-detail-header">
        <div class="pm-detail-title-row">
            <div>
                <div class="pm-detail-code">@project.ProjectCode</div>
                <h1 class="pm-detail-title">
                    @project.ProjectName
                    @if (ViewBag.IsLeader)
                    {
                        <span class="pm-badge pm-badge-leader" style="color: white; font-size: 1rem;">
                            <i class="fas fa-crown"></i> Leader
                        </span>
                    }
                </h1>
            </div>
            <div class="pm-detail-badges">
                @{
                    var statusClass = project.Status switch
                    {
                        "Planning" => "pm-badge-planning",
                        "InProgress" => "pm-badge-progress",
                        "Completed" => "pm-badge-completed",
                        "OnHold" => "pm-badge-onhold",
                        _ => "pm-badge-progress"
                    };
                    var projectStatusText = project.Status switch
                    {
                        "Planning" => "Lên kế hoạch",
                        "InProgress" => "Đang triển khai",
                        "Completed" => "Hoàn thành",
                        "OnHold" => "Tạm dừng",
                        _ => project.Status
                    };
                }
                <span class="pm-badge @statusClass" style="color: white;">
                    <i class="fas fa-circle" style="font-size: 0.5rem;"></i>
                    @projectStatusText
                </span>
                <span class="pm-badge pm-badge-member" style="color: white;">
                    <i class="fas fa-user"></i>
                    @ViewBag.MyRole
                </span>
            </div>
        </div>

        <div class="pm-detail-meta-grid">
            <div class="pm-detail-meta-item">
                <div class="pm-detail-meta-icon">
                    <i class="fas fa-user-tie"></i>
                </div>
                <div class="pm-detail-meta-content">
                    <div class="pm-detail-meta-label">Leader</div>
                    <div class="pm-detail-meta-value">@(project.Leader?.FullName ?? "Chưa chỉ định")</div>
                </div>
            </div>

            <div class="pm-detail-meta-item">
                <div class="pm-detail-meta-icon">
                    <i class="fas fa-tasks"></i>
                </div>
                <div class="pm-detail-meta-content">
                    <div class="pm-detail-meta-label">Task của tôi</div>
                    <div class="pm-detail-meta-value">@ViewBag.MyTotalTasks tasks</div>
                </div>
            </div>

            <div class="pm-detail-meta-item">
                <div class="pm-detail-meta-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="pm-detail-meta-content">
                    <div class="pm-detail-meta-label">Hoàn thành</div>
                    <div class="pm-detail-meta-value">@ViewBag.MyCompletedTasks/@ViewBag.MyTotalTasks</div>
                </div>
            </div>

            <div class="pm-detail-meta-item">
                <div class="pm-detail-meta-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <div class="pm-detail-meta-content">
                    <div class="pm-detail-meta-label">Tiến độ của tôi</div>
                    <div class="pm-detail-meta-value">@ViewBag.MyCompletionRate%</div>
                </div>
            </div>
        </div>
    </div>

    <!-- ACTION BUTTONS -->
    <div class="pm-d-flex pm-gap-2 pm-mb-3">
        <a href="@Url.Action("MyProjects", "Staff")" class="pm-btn pm-btn-secondary">
            <i class="fas fa-arrow-left"></i>
            Quay lại
        </a>
        @if (ViewBag.IsLeader)
        {
            <a href="@Url.Action("ProjectDetail", "Admin", new { id = project.ProjectId })" class="pm-btn pm-btn-primary">
                <i class="fas fa-cog"></i>
                Quản lý dự án
            </a>
        }
    </div>

    <!-- TABS -->
    <div class="pm-tabs">
        <button class="pm-tab active" data-tab="my-tasks">
            <i class="fas fa-tasks"></i>
            Tasks của tôi (@ViewBag.MyTotalTasks)
        </button>
        <button class="pm-tab" data-tab="overview">
            <i class="fas fa-info-circle"></i>
            Tổng quan
        </button>
        <button class="pm-tab" data-tab="members">
            <i class="fas fa-users"></i>
            Thành viên (@(activeMembers?.Count ?? 0))
        </button>
    </div>

    <!-- TAB: MY TASKS -->
    <div class="pm-tab-content active" id="my-tasks">
        <!-- Task Stats -->
        <div class="pm-stats-grid" style="margin-bottom: 1.5rem;">
            <div class="pm-stats-card" style="border-left-color: #6b7280;">
                <div class="pm-stats-icon" style="background: rgba(107, 114, 128, 0.1); color: #6b7280;">
                    <i class="fas fa-circle"></i>
                </div>
                <div class="pm-stats-content">
                    <div class="pm-stats-label">TODO</div>
                    <div class="pm-stats-value">@ViewBag.MyTodoTasks</div>
                </div>
            </div>

            <div class="pm-stats-card" style="border-left-color: var(--warning);">
                <div class="pm-stats-icon" style="background: rgba(245, 158, 11, 0.1); color: var(--warning);">
                    <i class="fas fa-spinner"></i>
                </div>
                <div class="pm-stats-content">
                    <div class="pm-stats-label">Đang làm</div>
                    <div class="pm-stats-value">@ViewBag.MyInProgressTasks</div>
                </div>
            </div>

            <div class="pm-stats-card" style="border-left-color: var(--info);">
                <div class="pm-stats-icon" style="background: rgba(59, 130, 246, 0.1); color: var(--info);">
                    <i class="fas fa-vial"></i>
                </div>
                <div class="pm-stats-content">
                    <div class="pm-stats-label">Chờ test</div>
                    <div class="pm-stats-value">@ViewBag.MyTestingTasks</div>
                </div>
            </div>

            <div class="pm-stats-card" style="border-left-color: var(--success);">
                <div class="pm-stats-icon" style="background: rgba(16, 185, 129, 0.1); color: var(--success);">
                    <i class="fas fa-check"></i>
                </div>
                <div class="pm-stats-content">
                    <div class="pm-stats-label">Hoàn thành</div>
                    <div class="pm-stats-value">@ViewBag.MyCompletedTasks</div>
                </div>
            </div>
        </div>

        <div class="pm-card">
            <div class="pm-card-body">
                @if (myTasksWithMetadata != null && myTasksWithMetadata.Any())
                {
                    <div class="pm-tasks-list">
                        @foreach (var item in myTasksWithMetadata)
                        {
                            var ut = item.UserTask;
                            var task = item.Task;

                            <div class="pm-task-card status-@ut.Status">
                                <div class="pm-task-header">
                                    <div>
                                        <h4 class="pm-task-title">
                                            @task.TaskName
                                            @if (item.IsOverdue)
                                            {
                                                <span class="pm-badge pm-badge-high" style="font-size: 0.75rem;">
                                                    <i class="fas fa-exclamation-triangle"></i>
                                                    @(ut.Status == "Done" ? "Hoàn thành trễ" : "Quá hạn")
                                                </span>
                                            }
                                        </h4>
                                        <div class="pm-task-meta">
                                            @if (task.Deadline.HasValue)
                                            {
                                                <span class="pm-task-meta-item">
                                                    <i class="fas fa-calendar"></i>
                                                    Deadline: @task.Deadline.Value.ToString("dd/MM/yyyy HH:mm")
                                                </span>
                                            }
                                            @if (!string.IsNullOrEmpty(task.Platform))
                                            {
                                                <span class="pm-task-meta-item">
                                                    <i class="fas fa-code"></i>
                                                    @task.Platform
                                                </span>
                                            }
                                            @if (ut.UpdatedAt.HasValue)
                                            {
                                                <span class="pm-task-meta-item">
                                                    <i class="fas fa-clock"></i>
                                                    Cập nhật: @ut.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                                </span>
                                            }
                                        </div>
                                    </div>
                                    <div class="pm-project-badges">
                                        <span class="pm-badge @item.StatusBadgeClass">
                                            <i class="fas fa-circle" style="font-size: 0.5rem;"></i>
                                            @item.StatusText
                                        </span>
                                        <span class="pm-badge @item.PriorityClass">
                                            <i class="fas fa-flag"></i>
                                            @(task.Priority ?? "Medium")
                                        </span>
                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(task.Description))
                                {
                                    <p style="color: var(--text-muted); font-size: 0.875rem; margin-top: 0.5rem;">
                                        @task.Description
                                    </p>
                                }

                                @if (!string.IsNullOrEmpty(ut.ReportLink))
                                {
                                    <div style="margin-top: 0.75rem;">
                                        <strong style="color: var(--text-muted); font-size: 0.875rem;">Report Link:</strong>
                                        <a href="@ut.ReportLink" target="_blank"
                                           style="color: var(--info); text-decoration: underline; font-size: 0.875rem; margin-left: 0.5rem;">
                                            @ut.ReportLink
                                        </a>
                                    </div>
                                }

                                @if (ut.Status != "Done")
                                {
                                    <div class="pm-d-flex pm-gap-2" style="margin-top: 1rem;">
                                        <button type="button" class="pm-btn pm-btn-primary pm-btn-sm"
                                                onclick="updateTaskStatus(@ut.UserTaskId, '@ut.Status')">
                                            <i class="fas fa-edit"></i>
                                            Cập nhật tiến độ
                                        </button>
                                        <a href="@Url.Action("MyTasks", "Staff")" class="pm-btn pm-btn-secondary pm-btn-sm">
                                            <i class="fas fa-link"></i>
                                            Xem trong My Tasks
                                        </a>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="pm-empty-state">
                        <div class="pm-empty-icon">
                            <i class="fas fa-tasks"></i>
                        </div>
                        <h3 class="pm-empty-title">Chưa có task nào</h3>
                        <p class="pm-empty-text">Bạn chưa được giao task nào trong dự án này</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- TAB: OVERVIEW -->
    <div class="pm-tab-content" id="overview">
        <div class="pm-card">
            <div class="pm-card-header">
                <h5 class="pm-card-title">
                    <i class="fas fa-align-left"></i>
                    Mô tả dự án
                </h5>
            </div>
            <div class="pm-card-body">
                <p style="color: var(--text); line-height: 1.6;">
                    @(project.Description ?? "Chưa có mô tả cho dự án này.")
                </p>
            </div>
        </div>

        <div class="pm-form-row">
            <div class="pm-card">
                <div class="pm-card-header">
                    <h5 class="pm-card-title">
                        <i class="fas fa-calendar"></i>
                        Thông tin thời gian
                    </h5>
                </div>
                <div class="pm-card-body">
                    <div style="display: flex; flex-direction: column; gap: 1rem;">
                        <div>
                            <strong style="color: var(--text-muted);">Ngày bắt đầu:</strong>
                            <div style="color: var(--text); font-weight: 600;">
                                @(project.StartDate?.ToString("dd/MM/yyyy") ?? "Chưa xác định")
                            </div>
                        </div>
                        <div>
                            <strong style="color: var(--text-muted);">Ngày kết thúc:</strong>
                            <div style="color: var(--text); font-weight: 600;">
                                @(project.EndDate?.ToString("dd/MM/yyyy") ?? "Chưa xác định")
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="pm-card">
                <div class="pm-card-header">
                    <h5 class="pm-card-title">
                        <i class="fas fa-chart-pie"></i>
                        Tiến độ dự án
                    </h5>
                </div>
                <div class="pm-card-body">
                    <div class="pm-project-progress">
                        <div class="pm-progress-label">
                            <span class="pm-progress-text">Tiến độ chung</span>
                            <span class="pm-progress-value">@((project.Progress ?? 0).ToString("F1"))%</span>
                        </div>
                        <div class="pm-progress-bar">
                            <div class="pm-progress-fill" style="width: @((project.Progress ?? 0).ToString("F1"))%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- TAB: MEMBERS -->
    <div class="pm-tab-content" id="members">
        <div class="pm-card">
            <div class="pm-card-body">
                @{
                    var membersList = activeMembers ?? new List<dynamic>();
                }

                @if (membersList.Any())
                {
                    <div class="pm-members-grid">
                        @foreach (var item in membersList)
                        {
                            var member = item.Member;

                            <div class="pm-member-card">
                                <div class="pm-member-avatar">
                                    @if (item.HasAvatar)
                                    {
                                        <img src="@member.User.Avatar" alt="@member.User.FullName">
                                    }
                                    else
                                    {
                                        <span>@item.Initials</span>
                                    }
                                </div>
                                <div class="pm-member-info">
                                    <div class="pm-member-name">
                                        @member.User?.FullName
                                        @if (member.Role == "Leader")
                                        {
                                            <span class="pm-badge pm-badge-leader" style="font-size: 0.65rem; padding: 0.25rem 0.5rem;">
                                                <i class="fas fa-crown"></i> Leader
                                            </span>
                                        }
                                    </div>
                                    <div class="pm-member-role">@member.User?.Email</div>
                                    <div class="pm-member-dept">@(member.User?.Department?.DepartmentName ?? "N/A")</div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="pm-empty-state">
                        <div class="pm-empty-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <h3 class="pm-empty-title">Chưa có thành viên</h3>
                        <p class="pm-empty-text">Dự án chưa có thành viên nào</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Tab switching
        document.querySelectorAll('.pm-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                const targetTab = this.dataset.tab;

                document.querySelectorAll('.pm-tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.pm-tab-content').forEach(c => c.classList.remove('active'));

                this.classList.add('active');
                document.getElementById(targetTab).classList.add('active');
            });
        });

        function updateTaskStatus(userTaskId, currentStatus) {
            Swal.fire({
                title: 'Cập nhật tiến độ',
                text: 'Chuyển sang trang My Tasks để cập nhật chi tiết hơn?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#6366f1',
                cancelButtonColor: '#64748b',
                confirmButtonText: '<i class="fas fa-arrow-right"></i> Đến My Tasks',
                cancelButtonText: '<i class="fas fa-times"></i> Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '@Url.Action("MyTasks", "Staff")';
                }
            });
        }

        // Dark mode support
        if (localStorage.getItem('dark-mode') === 'enabled') {
            document.body.classList.add('staff-dark-mode');
        }
    </script>
}

<style>
    .pm-btn-sm {
        padding: 0.5rem 1rem;
        font-size: 0.8125rem;
    }
</style>